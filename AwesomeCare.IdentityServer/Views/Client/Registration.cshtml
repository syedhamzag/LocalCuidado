@model AwesomeCare.IdentityServer.ViewModels.IdentityServer4ClientViewModel

@{
    ViewData["Title"] = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registration</h2>

<h4>IdentityServer Client</h4>

<hr />

<form asp-action="Registration">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="form-group col-sm-6">
            <label asp-for="ClientType" class="control-label"></label>
            <input asp-for="ClientType" class="form-control" readonly/>
            <span asp-validation-for="ClientType" class="text-danger"></span>
        </div>
        <div class="form-group  col-sm-6">
            <label asp-for="DisplayName" class="control-label"></label>
            <input asp-for="DisplayName" class="form-control" />
            <span asp-validation-for="DisplayName" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-sm-6">
            <label asp-for="ClientId" class="control-label"></label>
            <input asp-for="ClientId" class="form-control" readonly/>
            <span asp-validation-for="ClientId" class="text-danger"></span>
        </div>
        <div class="form-group  col-sm-6">
            <label asp-for="SharedSecret" class="control-label"></label>
            <input asp-for="SharedSecret" class="form-control" readonly/>
            <span asp-validation-for="SharedSecret" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-sm-6">
            <label asp-for="DisplayUrl" class="control-label"></label>
            <input asp-for="DisplayUrl" class="form-control" />
            <span asp-validation-for="DisplayUrl" class="text-danger"></span>
        </div>
        <div class="form-group  col-sm-6">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-sm-6">
            <label asp-for="CallBackUrl" class="control-label"></label>
            <input asp-for="CallBackUrl" class="form-control" />
            <span asp-validation-for="CallBackUrl" class="text-danger"></span>
        </div>
        <div class="form-group col-sm-6">
            <label asp-for="LogoUrl" class="control-label"></label>
            <input asp-for="LogoUrl" class="form-control" />
            <span asp-validation-for="LogoUrl" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-sm-6">
            <label class="control-label">Identity Resources</label>
            <select asp-for="AllowedScopes" class="form-control multiselect">
                @foreach (var item in Model.IdentityResourceListItems)
                {
                    <option value="@item.Value">@item.Value (@item.Text)</option>
                }
            </select>
            <span asp-validation-for="AllowedScopes" class="text-danger"></span>
        </div>

        <div class="form-group col-sm-6">
            <label class="control-label">Protected Resources</label>
            <select asp-for="AllowedScopes" class="form-control multiselect">
                @foreach (var item in Model.ProtectedResourcesListItems)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>
            <span asp-validation-for="AllowedScopes" class="text-danger"></span>
        </div>


    </div>

    <div class="form-group">
        <div class="checkbox">
            <label>
                <input asp-for="RequireConsent" /> @Html.DisplayNameFor(model => model.RequireConsent)
            </label>
        </div>
    </div>



    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-default" />
    </div>
</form>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            $('.multiselect').multiselect();

        });
    </script>


}