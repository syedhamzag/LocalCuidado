@using AwesomeCare.Admin.ViewModels.Reporting;

@model ReportingViewModel
@{
    ViewData["Title"] = "Empty Log Book";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12">
        <div class="card planned_task">
            <div class="header">
                <h2>Reporting REPORT</h2>
            </div>
            <div class="body">
                <form asp-action="EmptyLog" method="post">
                    <div class="row">
                        <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                            <label class="control-label">Date</label>
                            <input type="text" asp-for="Date" class="form-control" data-provide="datepicker" data-date-autoclose="true" data-date-format="mmm/yyyy" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6 col-xs-12 col-md-6 col-lg-6">
                            <label>Select Client</label>
                            <select class="form-control" name="ClientId" asp-items="@Model.ClientList">
                            </select>
                        </div>
                        <div class="form-group col-sm-6 col-xs-12 col-md-6 col-lg-6">
                            <input type="submit" class="btn btn-default" style="margin-top:30px !important;" value="Search" />
                        </div>
                    </div>
                </form>

                @if (Model != null)
                {
                }
            </div>
        </div>
    </div>
</div>
