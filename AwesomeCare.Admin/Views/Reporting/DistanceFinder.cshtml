@using AwesomeCare.Admin.ViewModels.Reporting;

@model ReportingViewModel
@{
    ViewData["Title"] = "Distance Finder";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12">
        <div class="card planned_task">
            <div class="header">
            </div>
            <div class="body">
                <form asp-action="DistanceFinder" method="post">
                    <div class="row">
                        <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                            <label class="control-label">Enter PostCode</label>
                            <input type="text" asp-for="Postcode" class="form-control" placeholder="Postcode" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                            <input type="submit" class="btn btn-success" style="margin-top:30px !important;" value="Search" />
                        </div>
                    </div>
                </form>
                @if (Model.Client != null)
                {
                    <table class="table table-condensed table-hover table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Postcode
                                </th>
                                <th>
                                    Distance to Primary Code
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var client in Model.Client)
                            {
                                <tr>
                                    <td>
                                        @client.Firstname
                                    </td>
                                    <td>
                                        @client.PostCode
                                    </td>
                                    <td>

                                    </td>
                                </tr>

                            }

                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>