@using AwesomeCare.DataTransferObject.DTOs.MedicationManufacturer;

@model PutMedicationManufacturer
@{
    ViewData["Title"] = "Update Medication Manufacturer";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12">
        <div class="card planned_task">
            <div class="header">
                <h2>Edit Medication Manufacturer</h2>
                <ul class="header-dropdown">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"></a>
                        <ul class="dropdown-menu dropdown-menu-right">
                            <li><a asp-controller="MedicationManufacturer" asp-action="Create">Create New</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="MedicationManufacturerId" />
                    <div class="row">

                        <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                            <label asp-for="Manufacturer"></label>
                            <input type="text" asp-for="Manufacturer" class="form-control">
                            <span asp-validation-for="Manufacturer" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="form-group">
                        
                        <label class="fancy-checkbox">
                            <input type="checkbox" asp-for="Deleted">
                            <span>Check to delete</span>
                        </label>
                        
                    </div>

                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-action="Index" asp-controller="MedicationManufacturer" class="btn btn-primary pull-right">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

