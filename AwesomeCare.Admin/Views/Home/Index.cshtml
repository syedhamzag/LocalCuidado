@using AwesomeCare.Admin.ViewModels;
@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}
@section HeaderScripts{
    <link rel="stylesheet" href="../assets/vendor/jquery-steps/jquery.steps.css">
    <link rel="stylesheet" href="../assets/vendor/dropify/css/dropify.min.css">
}

<div class="col-lg-12 col-md-12">
    <div class="card planned_task">
        <div class="header">
            <h2>Home Page</h2>
            <ul class="header-dropdown">
                <li class="dropdown">
                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"></a>
                    <ul class="dropdown-menu dropdown-menu-right">
                        <li><a href="javascript:void(0);">Action</a></li>
                        <li><a href="javascript:void(0);">Another Action</a></li>
                        <li><a href="javascript:void(0);">Something else</a></li>
                    </ul>
                </li>
            </ul>
        </div>
        <div class="body">
            <h4>Home Page</h4>
            <form id="basic-form" enctype="multipart/form-data" asp-action="Index" asp-controller="Home" method="post">
                <input type="file" asp-for="ClientImage" class="dropify" data-allowed-file-extensions="png jpg jpeg">
                <br>

                <button type="submit" class="btn btn-primary pull-right">Upload</button>

            </form>
          
        </div>
    </div>
</div>
@section VendorScripts{
    <script src="../assets/vendor/jquery-steps/jquery.steps.js"></script> <!-- JQuery Steps Plugin Js -->
    <script src="../assets/vendor/dropify/js/dropify.min.js"></script>
    <script src="../assets/bundles/mainscripts.bundle.js"></script>
}

