@using AwesomeCare.Admin.ViewModels.Client;

@model CreateClient
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<input type="hidden" asp-for="@Model.ClientId" />
<input type="hidden" asp-for="@Model.Firstname" />
<input type="hidden" asp-for="@Model.Middlename" />
<input type="hidden" asp-for="@Model.Surname" />
<input type="hidden" asp-for="@Model.Telephone" />


<div class="col-lg-12">


    <div class="accordion" id="accordion">

        @for (int r = 0; r < Model.CareDetails.Count; r++)
        {
            <div>
                <div class="card-header" id="@string.Concat("heading",@r)">
                    <h5 class="mb-0">
                        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="@string.Concat("#","collapse",@r)" aria-expanded="true" aria-controls="@string.Concat("collapse",@r)">
                            @Model.CareDetails[r].Heading
                        </button>
                    </h5>
                </div>
                <div id="@string.Concat("collapse",@r)" class="collapse show" aria-labelledby="@string.Concat("heading",@r)" data-parent="#accordion">
                    <div class="card-body">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>TASK</th>
                                    <th>DESCRIPTION</th>
                                    <th>RISK</th>
                                    <th>MITIGATION</th>
                                    <th>LOCATION</th>
                                    <th>REMARK</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.CareDetails[r].Tasks.Count; i++)
                                {
                                    <tr>
                                        <td>
                                            <input type="checkbox" asp-for="@Model.CareDetails[r].Tasks[i].IsSelected" />
                                        </td>
                                        <td>
                                            @Model.CareDetails[r].Tasks[i].Task
                                            <input type="hidden" asp-for="@Model.CareDetails[r].Tasks[i].CareDetailsHeadingId" />
                                            <input type="hidden" asp-for="@Model.CareDetails[r].Tasks[i].CareDetailsTaskId" />
                                            <input type="hidden" asp-for="@Model.CareDetails[r].Tasks[i].Task" />

                                        </td>
                                        <td>
                                            <input asp-for="@Model.CareDetails[r].Tasks[i].Description" type="text" class="form-control" />
                                            <span asp-validation-for="@Model.CareDetails[r].Tasks[i].Description" class="text-danger"></span>
                                        </td>
                                        <td>
                                            <input asp-for="@Model.CareDetails[r].Tasks[i].Risk" type="text" class="form-control" />
                                            <span asp-validation-for="@Model.CareDetails[r].Tasks[i].Risk" class="text-danger"></span>
                                        </td>
                                        <td>
                                        <input asp-for="@Model.CareDetails[r].Tasks[i].Mitigation" type="text" class="form-control" />
                                        <span asp-validation-for="@Model.CareDetails[r].Tasks[i].Mitigation" class="text-danger"></span>
                                        </td>
                                        <td>
                                        <input asp-for="@Model.CareDetails[r].Tasks[i].Location" type="text" class="form-control" />
                                        <span asp-validation-for="@Model.CareDetails[r].Tasks[i].Location" class="text-danger"></span>
                                        </td>
                                        <td>
                                        <input asp-for="@Model.CareDetails[r].Tasks[i].Remark" type="text" class="form-control" />
                                        <span asp-validation-for="@Model.CareDetails[r].Tasks[i].Remark" class="text-danger"></span>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        }


    </div>



</div>