@using AwesomeCare.Admin.ViewModels.Client;
@model CreateClient

@{
    ViewData["Title"] = "HomeCare Client";
}

@section HeaderScripts{
    <link rel="stylesheet" href="../assets/vendor/jquery-steps/jquery.steps.css">
    <link rel="stylesheet" href="../assets/vendor/dropify/css/dropify.min.css">
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="header">
                <h2>Registration</h2>
            </div>
            <div class="body">
                <ul class="nav nav-tabs-new2">
                    <li class="nav-item"><a class="nav-link active show" data-toggle="tab" href="#personalInfo">Personal Info</a></li>
                    <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#involvingparties">Involving Parties</a></li>
                    <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#regulatorycontact">Regulatory Contact</a></li>
                    <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#caredetails">Care Details</a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane show active" id="personalInfo">


                        <form id="basic-form" enctype="multipart/form-data" asp-action="HomeCareRegistration" asp-controller="Client" method="post">
                            <partial name="_ClientPersonalInfo" model="Model" />
                            <br>
                            @if (Model.ActiveTab == "personalInfo")
                            {
                                <button type="submit" class="btn btn-primary pull-right">Save & Continue</button>
                            }

                        </form>


                    </div>
                    <div class="tab-pane" id="involvingparties">

                        <form id="basic-formII" asp-action="_InvolvingParty" asp-controller="Client" method="post">
                            <partial name="_InvolvingParty" model="Model" />
                            <br>
                            @if (Model.ActiveTab == "involvingparties")
                            {
                                <button type="submit" class="btn btn-primary pull-right">Save & Continue</button>
                            }

                        </form>

                    </div>

                    <div class="tab-pane" id="regulatorycontact">

                        <form id="regulatorycontactform" enctype="multipart/form-data" asp-action="_RegulatoryContact" asp-controller="client" method="post">
                            <partial name="_regulatorycontact" model="Model" />
                            <br>
                            @if (Model.ActiveTab == "regulatorycontact")
                            {
                                <button type="submit" class="btn btn-primary pull-right">save & continue</button>
                            }

                        </form>

                    </div>

                    <div class="tab-pane" id="caredetails">
                        <form id="caredetailsform" enctype="multipart/form-data" asp-action="_CareDetails" asp-controller="client" method="post">
                            <partial name="_caredetails" model="Model" />
                            <br>

                            @if (Model.ActiveTab == "caredetails")
                            {
                                <button type="submit" class="btn btn-primary pull-right">save & continue</button>
                            }

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section VendorScripts{
    <script src="../assets/vendor/jquery-steps/jquery.steps.js"></script> <!-- JQuery Steps Plugin Js -->
    <script src="../assets/vendor/dropify/js/dropify.min.js"></script>
    <script src="../assets/bundles/mainscripts.bundle.js"></script>
}

@section Scripts{
    <script src="../assets/js/pages/forms/form-wizard.js"></script>
    <script src="../assets/js/pages/forms/dropify.js"></script>
    <script>
        $(document).ready(function () {
             $('a[href="#@Model.ActiveTab"]').tab('show');

        })
    </script>
}