                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.GetClientMedAudit)
                                {
                                    <tr>
                                        <td>
                                            @item.ActionRecommended
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.EvidenceOfActionTaken))
                                            {
                                                <a asp-action="DownloadFile" asp-route-file="@item.EvidenceOfActionTaken">Download</a>
                                            }

                                        </td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>

                    <div class="tab-pane" id="voice">
                        <div class="header">
                            <ul class="header-dropdown">
                                <li class="dropdown">
                                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"></a>
                                    <ul class="dropdown-menu dropdown-menu-right">
                                        <li><a asp-action="Index" asp-route-clientId="@Model.ClientId" asp-controller="ClientVoice">Create Voice</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Action Required</th>
                                    <th>Attachment</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.GetClientVoice)
                                {
                                    <tr>
                                        <td>
                                            @item.ActionRequired
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.EvidenceOfActionTaken))
                                            {
                                                <a asp-action="DownloadFile" asp-route-file="@item.Attachment">Download</a>
                                            }

                                        </td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
