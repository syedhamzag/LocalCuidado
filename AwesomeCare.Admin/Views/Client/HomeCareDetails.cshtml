                                        <div class="form-group">
                                            <label asp-for="IdNumber" class="control-label"></label>
                                            <input type="text" class="form-control" asp-for="IdNumber" readonly>
                                        </div>
                                    </div>

                                </div>

                                <div class="row">
                                    <div class="col-xs-12 col-sm-4 col-md-4">
                                        <div class="form-group">
                                            <label asp-for="Email" class="control-label"></label>
                                            <input type="email" class="form-control" asp-for="Email" readonly>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-4 col-md-4">
                                        <div class="form-group">
                                            <label asp-for="StartDate" class="control-label"></label>
                                            <input type="text" asp-for="StartDate" class="form-control" readonly>

                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-4 col-md-4">
                                        <div class="form-group">
                                            <label asp-for="EndDate" class="control-label"></label>
                                            <input type="text" asp-for="EndDate" class="form-control" readonly>

                                        </div>
                                    </div>

                                </div>

                                <div class="row">
                                    <div class="col-xs-12 col-sm-4 col-md-4">
                                        <div class="form-group">
                                            <label asp-for="NumberOfCalls" class="control-label"></label>
                                            <input type="number" class="form-control" asp-for="NumberOfCalls" readonly>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-4 col-md-4">
                                        <div class="form-group">
                                            <label asp-for="AreaCodeId" class="control-label"></label>
                                            <baserecord asp-key="AreaCode" asp-for="AreaCodeId" asp-items="null" />
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-4 col-md-4">
                                        <div class="form-group">
                                            <label asp-for="TeritoryId" class="control-label"></label>
                                            <baserecord asp-key="Teritory" asp-for="TeritoryId" asp-items="null" />
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="col-xs-2 col-sm-2 col-md-2">
                                <div class="card">
                                    <div class="header">
                                        <h2>QR Code<small></small></h2>
                                    </div>
                                    <div class="body">
                                        <img alt="clientimage" src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(Model.QRCode))">
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-3 col-sm-3 col-md-3">
                                <div class="card">
                                    <div class="header">
                                        <h2>Image<small></small></h2>
                                    </div>
                                    <div class="body">
                                        <img alt="clientimage" src="@Model.PassportFilePath" height="150" width="150">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                <div class="form-group">
                                    <label asp-for="ServiceId" class="control-label"></label>
                                    <baserecord asp-key="Service" asp-for="ServiceId" asp-items="null" />
