                                    <label asp-for="ProvisionVenue" class="control-label"></label>
                                    <input type="text" class="form-control" asp-for="ProvisionVenue" readonly>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                <div class="form-group">
                                    <label asp-for="PostCode" class="control-label"></label>
                                    <input type="text" class="form-control" asp-for="PostCode" readonly>
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                <div class="form-group">
                                    <label asp-for="Rate" class="control-label"></label>
                                    <input type="text" class="form-control" asp-for="Rate" readonly>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                <div class="form-group">
                                    <label asp-for="TeamLeader" class="control-label"></label>
                                    <input type="text" class="form-control" asp-for="TeamLeader" readonly>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                <div class="form-group">
                                    <label asp-for="Telephone" class="control-label"></label>
                                    <input type="text" class="form-control" asp-for="Telephone" readonly>
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                <div class="form-group">
                                    <label asp-for="LanguageId" class="control-label"></label>
                                    <baserecord asp-key="Language" asp-for="LanguageId" asp-items="null" />
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                <div class="form-group">
                                    <label asp-for="KeySafe" class="control-label"></label>
                                    <input type="text" class="form-control" asp-for="KeySafe" readonly>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                <div class="form-group">
                                    <label asp-for="ChoiceOfStaffId" class="control-label"></label>
                                    <baserecord asp-key="Client_ChoiceOfStaff" asp-for="ChoiceOfStaffId" asp-items="null" />
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                <div class="form-group">
                                    <label asp-for="CapacityId" class="control-label"></label>
                                    <baserecord asp-key="Client_Capacity" asp-for="CapacityId" asp-items="null" />
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                <div class="form-group">
                                    <label asp-for="ProviderReference" class="control-label"></label>
                                    <input type="text" class="form-control" asp-for="ProviderReference" readonly>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                <div class="form-group">
                                    <label asp-for="NumberOfStaff" class="control-label"></label>
                                    <input type="number" class="form-control" asp-for="NumberOfStaff" readonly>
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                <div class="form-group">
                                    <label asp-for="Keyworker" class="control-label"></label>
                                    <input type="text" class="form-control" asp-for="Keyworker" readonly>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                <div class="form-group">
                                    <label asp-for="Latitude" class="control-label"></label>
                                    <input type="text" class="form-control" asp-for="Latitude" readonly>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                <div class="form-group">
                                    <label asp-for="Longitude" class="control-label"></label>
                                    <input type="text" class="form-control" asp-for="Longitude" readonly>
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                <div class="form-group">
                                    <label asp-for="Address" class="control-label"></label>
                                    <textarea class="form-control" asp-for="Address" readonly></textarea>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                <div class="form-group">
                                    <label asp-for="About" class="control-label"></label>
                                    <textarea class="form-control" asp-for="About" readonly></textarea>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                <div class="form-group">
                                    <label asp-for="Hobbies" class="control-label"></label>
                                    <textarea class="form-control" asp-for="Hobbies" readonly></textarea>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="tab-pane" id="involvingparties">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>

                                    <th>NAME</th>
                                    <th>ADDRESS</th>
                                    <th>EMAIL</th>
                                    <th>TELEPHONE</th>
                                    <th>RELATIONSHIP</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.InvolvingParties)
                                {
                                    <tr>
                                        <td>
                                            @item.Name
                                        </td>
                                        <td>
                                            @item.Address
                                        </td>
                                        <td>
                                            @item.Email
                                        </td>
                                        <td>
                                            @item.Telephone
                                        </td>
                                        <td>
                                            @item.Relationship
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>

                    <div class="tab-pane" id="regulatorycontact">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Regulatory Contact</th>
                                    <th>Date Performed</th>
                                    <th>Date Due</th>
                                    <th>Evidence</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.RegulatoryContact)
                                {
                                    <tr>
                                        <td>
                                            @item.RegulatoryContact
                                        </td>
                                        <td>
                                            @if (item.DatePerformed.HasValue)
                                            {
                                                var datePerformed = item.DatePerformed.Value.ToString("MMM. dd, yyyy");
                                                @datePerformed;
                                            }

                                        </td>
                                        <td>
                                            @if (item.DueDate.HasValue)
                                            {
                                                var dueDate = item.DueDate.Value.ToString("MMM. dd, yyyy");
                                                @dueDate;
                                            }

                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.Evidence))
                                            {
                                                <a asp-action="DownloadFile" asp-route-file="@item.Evidence">Download</a>
                                            }

                                        </td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>

                    <div class="tab-pane" id="complaintregister">
                        <div class="header">
                            <ul class="header-dropdown">
                                <li class="dropdown">
                                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"></a>
                                    <ul class="dropdown-menu dropdown-menu-right">
                                        <li><a asp-action="CreateComplainRegister" asp-route-clientId="@Model.ClientId" asp-controller="Complain">Create Complain</a></li>


                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Complain Contact</th>
                                    <th>Evidence</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.GetClientComplain)
                                {
                                    <tr>
                                        <td>
                                            @item.COMPLAINANTCONTACT
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.EvidenceFilePath))
                                            {
                                                <a asp-action="DownloadFile" asp-route-file="@item.EvidenceFilePath">Download</a>
                                            }

                                        </td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>

