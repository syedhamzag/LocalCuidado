@using AwesomeCare.DataTransferObject.DTOs.StaffBlackList;
@model List<GetStaffBlackList> 
        @{
        ViewData["Title"] = "Index";
        }
               
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12">
                <div class="card planned_task">
                    <div class="card-header">
                        <h2>Index</h2>
                        <ul class="header-dropdown">
                            <li class="dropdown">
                                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"></a>
                                <ul class="dropdown-menu dropdown-menu-right">
                                    <li><a asp-controller="StaffBlackList" asp-action="Add">Add</a></li>
                                   
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <div class="card-body">
                       <table class="table table-condensed table-hover table-bordered">
                           <thead>
                               <tr>
                                   <th>Staff</th>
                                   <th>Client</th>
                                   <th>Comment</th>
                                   <th>Date</th>
                                   <th></th>
                               </tr>
                           </thead>
                           <tbody>
                               @foreach (var blacklist in Model)
                               {
                                   <tr>
                                       <td>@blacklist.Staff</td>
                                       <td>@blacklist.Client</td>
                                       <td>@blacklist.Comment</td>
                                       <td>@blacklist.Date?.ToString("dd-MMM-yyyy")</td>
                                       <td><a asp-controller="StaffBlackList" asp-action="Details" asp-route-id="@blacklist.StaffBlackListId" class="text-danger">Delete</a></td>
                                   </tr>
                               }
                           </tbody>
                       </table>
                    </div>
                </div>
            </div>
        </div>
 
