@using AwesomeCare.Admin.ViewModels.ClientLogAudit;
@model CreateClientLogAudit
@{
    ViewData["Title"] = "View Client Log Audit";
}
@section HeaderScripts{
    <link rel="stylesheet" href="../../../assets2/vendor/jquery-steps/jquery.steps.css">
    <link rel="stylesheet" href="../../../assets2/vendor/dropify/css/dropify.min.css">
}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12">
        <div class="card planned_task">
            <div class="card-header">

                <h2></h2>

            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-xs-8 col-sm-8 col-md-8">
                        <input type="hidden" asp-for="LogAuditId" />
                        <input type="hidden" asp-for="ClientId" />
                        <div class="row">

                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">DATE</label>
                                <input type="text" asp-for="Date" class="form-control" readonly />
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">NEXT DUE DATE</label>
                                <input type="text" asp-for="NextDueDate" class="form-control" readonly />
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">DEADLINE</label>
                                <input type="text" asp-for="Deadline" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Reference</label>
                                <input type="text" asp-for="Reference" class="form-control" readonly />

                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Action Recommended</label>
                                <input type="text" asp-for="ActionRecommended" class="form-control" readonly />
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Action Taken</label>
                                <input type="text" asp-for="ActionTaken" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Officer to Take Action</label>
                                <select asp-for="OfficerToTakeAction" asp-items="@Model.OFFICERTOACT" class="selectpicker form-control" data-live-search="true" multiple></select>
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Status</label>
                                <baserecord asp-key="Staff_Communication_Status" asp-for="Status" asp-items="null" />
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Is there a Repeat of Incident</label>
                                <baserecord asp-key="Repeat_Of_Incident" asp-for="RepeatOfIncident" asp-items="null" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Name of Auditor</label>
                                <input type="text" asp-for="NameOfAuditor" class="form-control" readonly />

                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Rot Cause</label>
                                <input type="text" asp-for="RotCause" class="form-control" readonly />
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">

                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                <label class="control-label">Remark/Closing Comment</label>
                                <input type="text" asp-for="Remarks" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                <label class="control-label">Log URL</label>
                                <input type="text" asp-for="LogURL" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                <label class="control-label">Is care given is inline with care plan expectations</label>
                                <textarea type="text" asp-for="IsCareExpected" class="form-control" readonly></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                <label class="control-label">If care given is difference from expected, please give staff name and date of incident</label>
                                <textarea type="text" asp-for="IsCareDifference" class="form-control" readonly></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                <label class="control-label">Are documentation properly done including use of appropriate pen and clarity</label>
                                <textarea type="text" asp-for="ProperDocumentation" class="form-control" readonly></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                <label class="control-label">If no to proper documentation and use of pen, please give name of staff and date of incidents</label>
                                <textarea type="text" asp-for="ImproperDocumentation" class="form-control" readonly></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                <label class="control-label">How well are communication from outgoing staff to incoming staff picked from the note</label>
                                <textarea type="text" asp-for="Communication" class="form-control" readonly></textarea>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                <label class="control-label">Do you think service users needs are being met?</label>
                                <textarea type="text" asp-for="ThinkingServiceUsers" class="form-control" readonly></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                <label class="control-label">Do you think staff understand Safety, Caring, Responsiveness, Dignity and Respect?</label>
                                <textarea type="text" asp-for="ThinkingStaff" class="form-control" readonly></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                <label class="control-label">Do you think this staff should be stopped immidiately</label>
                                <textarea type="text" asp-for="ThinkingStaffStop" class="form-control" readonly></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                <label class="control-label">Observations</label>
                                <textarea type="text" asp-for="Observations" class="form-control" readonly></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                <label class="control-label">Lesson Learnt and Shared</label>
                                <textarea type="text" asp-for="LessonLearntAndShared" class="form-control" readonly></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-4 col-sm-4 col-md-4">
                        <div class="card">
                            <div class="card-header">
                                <h2>Evidence of Action Taken<small></small></h2>
                            </div>
                            <div class="card-body">
                                <img src="@Model.Evidence" alt="image" width="300" height="240" />
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header">
                                <h2>Attachment Image<small></small></h2>
                            </div>
                            <div class="card-body">
                                <img src="@Model.Attach" alt="image" width="300" height="240" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section VendorScripts{
    <script src="../../../assets2/vendor/jquery-steps/jquery.steps.js"></script> <!-- JQuery Steps Plugin Js -->
    <script src="../../../assets2/vendor/dropify/js/dropify.min.js"></script>
    <script src="../../../assets2/bundles/mainscripts.bundle.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.custom-select').attr("disabled", "disabled");
        });
    </script>
}

@section Scripts{
    <script src="../../../assets2/js/pages/forms/form-wizard.js"></script>
    <script src="../../../assets2/js/pages/forms/dropify.js"></script>
}

