@using AwesomeCare.Admin.ViewModels.Client;

@model CreateBestInterestAssessment
@{
    ViewData["Title"] = "Best Interest Assessment";
}
@section HeaderScripts{
    <link rel="stylesheet" href="../../../assets/vendor/jquery-steps/jquery.steps.css">
    <link rel="stylesheet" href="../../../assets/vendor/dropify/css/dropify.min.css">
}
<div class="col-lg-12">
    <div class="accordion" id="accordion">
        <div>
            <div class="card-header">

            </div>

            <div class="card-body">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="@Model.ClientId" />
                    <input type="hidden" asp-for="@Model.BestId" />
                    <input type="hidden" asp-for="@Model.BelieveTaskCount" value="@Model.BelieveTaskCount" />

                    <input type="hidden" asp-for="@Model.HealthTask2Count" value="@Model.HealthTask2Count" />
                    <input type="hidden" asp-for="@Model.CareIssuesTaskCount" value="@Model.CareIssuesTaskCount" />
                    <div class="row">
                        <div class="col-sm-3 col-xs-12 col-md-3 col-lg-3">
                            <div class="form-group">
                                <label class="control-label">Date</label>
                                <input type="text" class="form-control" asp-for="@Model.Date" data-provide="datepicker" data-date-autoclose="true" data-date-format="mm/dd/yyyy" />
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-3 col-xs-12 col-md-3 col-lg-3">
                            <div class="form-group">
                                <label class="control-label">Name</label>
                                <input type="text" class="form-control" asp-for="@Model.Name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-3 col-xs-12 col-md-3 col-lg-3">
                            <div class="form-group">
                                <label class="control-label">Position</label>
                                <input type="text" class="form-control" asp-for="@Model.Position" />
                                <span asp-validation-for="Position" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-3 col-xs-12 col-md-3 col-lg-3">
                            <div class="form-group">
                                <label class="control-label">Signature</label>
                                <input type="text" class="form-control" asp-for="@Model.Signature" />
                                <span asp-validation-for="Signature" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <label class="control-label">The health or social care issue that needs a specific decision (Please Tick) : </label>
                            @foreach (var item in Model.baseRecordList)
                            {
                                <div class="fancy-checkbox">
                                    <input type="hidden" asp-for="@item.BaseRecordItemId" />
                                    <label><input type="checkbox" class="MealType" name="@item.ValueName"><span>@item.ValueName</span></label>
                                </div>


                            }
                        </div>
                    </div>
                    <hr />
                    @{
                        int i = 0;
                        int j = 0;
                        @foreach (var head in Model.HeadingList)
                        {
                            if (j == 0)
                                i = 1;
                            else
                                i = i - 1;
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <h3>
                                        @head.ValueName
                                    </h3>

                                </div>
                            </div>
                            foreach (var title in Model.TitleList)
                            {
                                <input type="hidden" name="@string.Concat("HealthTaskId",(j+i))" id="@string.Concat("HealthTaskId",(j+i))" value="0" />
                                <input type="hidden" name="@string.Concat("HeadingId",(j+i))" id="@string.Concat("HeadingId",(j+i))" value="@head.BaseRecordItemId" />
                                Model.AnswerList = Model.BaseRecordList.Where(s => s.KeyName == "MCA_Health_Task_Answer").Select(s => s.BaseRecordItems).FirstOrDefault().ToList();
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <label class="control-label">@title.ValueName</label>
                                        <input type="hidden" name="@string.Concat("Title",(j+i))" id="@string.Concat("Title",(j+i))" value="@title.BaseRecordItemId" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                                        <label class="control-label">Answer</label>
                                        <select class="custom-select" onchange="showHide(this)" name="@string.Concat("Answer",(j+i))" id="@string.Concat("Answer",(j+i))" asp-items="@Model.AnswerList.Select(s => new SelectListItem(s.ValueName, s.BaseRecordItemId.ToString())).ToList()"></select>
                                    </div>
                                    <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                                        <label class="control-label" id="@string.Concat("lblRemarks",(j+i))" name="@string.Concat("lblRemarks",(j+i))" style="display:none">Remarks</label>
                                        <input type="text" class="form-control" name="@string.Concat("Remarks",(j+i))" id="@string.Concat("Remarks",(j+i))" style="display:none" value=" " />
                                    </div>
                                </div>
                                i++;
                            }
                            <hr />
                            j++;
                            var count = (j + i);
                            <input type="hidden" asp-for="@Model.HealthTaskCount" value="@count.ToString()" />
                        }
                    }
                    <hr />
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <label class="control-label">Reasonable believe</label>
                            <input type="hidden" asp-for="@Model.GetBelieveTask.FirstOrDefault().BelieveTaskId" value="0" />
                            <input type="text" class="form-control" asp-for="@Model.GetBelieveTask.FirstOrDefault().ReasonableBelieve" />
                            <span asp-validation-for="@Model.GetBelieveTask.FirstOrDefault().ReasonableBelieve" class="text-danger"></span>
                        </div>
                    </div>
                    <hr />
                    @{
                        int k = 0;
                        int l = 0;
                        @foreach (var head in Model.Heading2List)
                        {
                            if (l == 0)
                                k = 1;
                            else
                                k = k - 1;
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <h3>
                                        @head.ValueName
                                    </h3>

                                </div>
                            </div>
                            foreach (var title in Model.Title2List)
                            {
                                <input type="hidden" name="@string.Concat("HealthTaskId",(l+k))" id="@string.Concat("HealthTaskId",(l+k))" value="0" />
                                <input type="hidden" name="@string.Concat("HeadingId",(l+k))" id="@string.Concat("HeadingId",(l+k))" value="@head.BaseRecordItemId" />
                                Model.AnswerList = Model.BaseRecordList.Where(s => s.KeyName == "MCA_Health_Task_Answer").Select(s => s.BaseRecordItems).FirstOrDefault().ToList();
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <label class="control-label">@title.ValueName</label>
                                        <input type="hidden" name="@string.Concat("Title",(l+k))" id="@string.Concat("Title",(l+k))" value="@title.BaseRecordItemId" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                                        <label class="control-label">Answer</label>
                                        <select class="custom-select" onchange="show2Hide(this)" name="@string.Concat("Answer",(l+k))" id="@string.Concat("Answer",(l+k))" asp-items="@Model.AnswerList.Select(s => new SelectListItem(s.ValueName, s.BaseRecordItemId.ToString())).ToList()"></select>
                                    </div>
                                    <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                                        <label class="control-label" id="@string.Concat("lblRemarks",(l+k))" name="@string.Concat("lblRemarks",(l+k))" style="display:none">Remarks</label>
                                        <input type="text" class="form-control" name="@string.Concat("Remarks",(l+k))" id="@string.Concat("Remarks",(l+k))" style="display:none" value=" " />
                                    </div>
                                </div>
                                k++;
                            }
                            <hr />
                            l++;
                            var count = (l + k);
                            <input type="hidden" asp-for="@Model.HealthTaskCount" value="@count.ToString()" />
                        }
                    }
                    <hr />
                    <div class="row">
                        <div class="form-group col-sm-6 col-xs-12 col-md-4 col-lg-6">
                            <button type="submit" class="btn btn-primary pull-right">Submit</button>
                        </div>
                        <div class="form-group col-sm-6 col-xs-12 col-md-4 col-lg-6">
                            <a asp-action="Index" asp-route-clientId="ClientId" class="btn btn-primary pull-left">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section VendorScripts{
    <script src="../../../assets/vendor/jquery-steps/jquery.steps.js"></script> <!-- JQuery Steps Plugin Js -->
    <script src="../../../assets/vendor/dropify/js/dropify.min.js"></script>
    <script src="../../../assets/bundles/mainscripts.bundle.js"></script>
}

@section Scripts{
    <script src="../../../assets/js/pages/forms/form-wizard.js"></script>
    <script src="../../../assets/js/pages/forms/dropify.js"></script>
    <script>
        function showHide(element) {
            var Name = element.id;
            var Id = Name.split("Answer")[1];
            if (element.options[element.selectedIndex].text == 'Yes')
            {
                document.getElementById('Remarks' + Id).style.display = 'block';
                document.getElementById('lblRemarks' + Id).style.display = 'block';
            }
            else
            {
                document.getElementById('Remarks' + Id).style.display ='none';
                document.getElementById('lblRemarks' + Id).style.display ='none';
            }
        };
        function show2Hide(element) {
            var Name = element.id;
            var Id = Name.split("Answer")[1];
            if (element.options[element.selectedIndex].text == 'Yes') {
                document.getElementById('Remarks' + Id).style.display = 'block';
                document.getElementById('lblRemarks' + Id).style.display = 'block';
            }
            else {
                document.getElementById('Remarks' + Id).style.display = 'none';
                document.getElementById('lblRemarks' + Id).style.display = 'none';
            }
        };

        $(function () {

            
            $('#Heading2Id').on('change', function ()
            {
                if ($('#Heading2Id option:selected').text() === 'Yes')
                {
                    $('#Remark').css('display', 'block');
                    $('#lblRemark').css('display', 'block');
                }
                else {
                    $('#Remark').css('display', 'none');
                    $('#lblRemark').css('display', 'none');
                }
            });
            var table = $('#tbl_Task').DataTable({
                scrollCollapse: true,
                select: {
                    style: 'single'
                },
                searching: false, paging: false, info: false
            });
            var counter = $("#TaskCount").val();
            $('#Addrow').on('click', function () {
                counter++;
                var clone = $("#task tr:last").clone();
                clone.attr('id', 'row-' + counter);
                table.rows.add(clone).draw();
                $('#TaskCount').val(counter);

            });
            $('#tbl_Task tbody').on('click', 'tr', function () {
                if ($(this).hasClass('selected')) {
                    $(this).removeClass('selected');
                }
                else {
                    table.$('tr.selected').removeClass('selected');
                    $(this).addClass('selected');
                }
            });
            $('#Delrow').click(function () {
                const id = table.row('.selected').id();
                if (table.row('.selected').length > 0) {
                    const row = table.rows('.selected').remove().draw();
                    counter--;
                    $('#TaskCount').val(counter);
                }
                else {
                    alert("Please select row for delete !");
                }
            });
        });
    </script>
}

