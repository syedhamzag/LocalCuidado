@using AwesomeCare.Admin.ViewModels.Staff;
@model List<CreateStaffLateness>
@{
    ViewData["Title"] = "Staff Lateness Reports";
}
               
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12">
                <div class="card planned_task">
                    <div class="card-header">
                        <div class="dropdown profile-action">
                            <a href="#" class="action-icon dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_vert</i></a>
                            <div class="dropdown-menu dropdown-menu-right" style="">
                                <a asp-controller="StaffLateness" asp-action="Index">Create</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover js-basic-example dataTable table-custom">
                                    <thead>
                                        <tr>
                                            <th>Serial Number</th>
                                            <th>Date</th>
                                            <th>Time</th>
                                            <th>Staff</th>
                                            <th>Status</th>
                                            <th>Reason</th>
                                            <th>Reponse</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.SN</td>
                                                <td>@item.Date.ToString("dd/MM/yyyy")</td>
                                                <td>@item.TimeCritical.ToString("HH:mm")</td>
                                                <td>@item.StaffName</td>
                                                <td>@item.StatusName</td>
                                                <td>@item.Reason</td>
                                                <td>@item.Response</td>
                                                <td class="actions">
                                                    <a asp-action="Edit" asp-route-LatenessId="@item.StaffLatenessId" asp-controller="StaffLateness" class="btn btn-sm btn-icon btn-pure btn-success on-default m-r-5 button-pen">
                                                        <i class="fa fa-pencil" aria-hidden="true"></i>
                                                    </a>

                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
 
