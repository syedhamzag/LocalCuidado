@using AwesomeCare.Admin.ViewModels.Staff;

@model CreateStaffInterview
@{
    ViewData["Title"] = "Staff Interview Task";
}
@section HeaderScripts{
    <link rel="stylesheet" href="../../../assets/vendor/jquery-steps/jquery.steps.css">
    <link rel="stylesheet" href="../../../assets/vendor/dropify/css/dropify.min.css">
}
<div class="col-lg-12">
    <div class="accordion" id="accordion">
        <div>
            <div class="card-header">

            </div>

            <div class="card-body">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="@Model.StaffPersonalInfoId" />
                    <input type="hidden" asp-for="@Model.StaffInterviewId" />
                    <input type="hidden" asp-for="@Model.TaskCount" value="@Model.TaskCount" />
                    <div class="row">
                        <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                            <div class="form-group">
                                <input type="text" class="form-control" asp-for="@Model.Heading" />
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                            <div class="form-group">
                                <button type="button" id="Addrow" class="btn btn-primary pull-right mr-2 ml-5">Add</button>
                                <button type="button" id="Delrow" class="btn btn-primary pull-right">Delete</button>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <table class="table table-bordered table-hover" name="@Model.Tasks" id="tbl_Task">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Answer</th>
                                        <th>Comment</th>
                                        <th>Point</th>
                                        <th>Score</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Tasks.Count > 0)
                                    {
                                        foreach (var item in Model.Tasks)
                                        {
                                            <tr>
                                                <td>
                                                    <input type="hidden" asp-for="@Model.Tasks.FirstOrDefault(s=>s.StaffInterviewTaskId==item.StaffInterviewTaskId).StaffInterviewTaskId" />
                                                    <baserecord asp-key="@Model.Heading" asp-for="@Model.Tasks.FirstOrDefault(s=>s.StaffInterviewTaskId==item.StaffInterviewTaskId).Title" asp-items="null" />
                                                    <span asp-validation-for="@Model.Tasks.FirstOrDefault().Title" class="text-danger"></span>
                                                </td>
                                                <td>
                                                    <baserecord asp-key="Staff_Interview_Answer" asp-for="@Model.Tasks.FirstOrDefault(s=>s.StaffInterviewTaskId==item.StaffInterviewTaskId).Answer" asp-items="null" />
                                                    <span asp-validation-for="@Model.Tasks.FirstOrDefault().Answer" class="text-danger"></span>
                                                </td>
                                                <td>
                                                    <input asp-for="@Model.Tasks.FirstOrDefault(s=>s.StaffInterviewTaskId==item.StaffInterviewTaskId).Comment" type="text" class="form-control" />
                                                    <span asp-validation-for="@Model.Tasks.FirstOrDefault().Comment" class="text-danger"></span>
                                                </td>
                                                <td>
                                                    <input asp-for="@Model.Tasks.FirstOrDefault(s=>s.StaffInterviewTaskId==item.StaffInterviewTaskId).Point" type="text" class="form-control" />
                                                    <span asp-validation-for="@Model.Tasks.FirstOrDefault().Point" class="text-danger"></span>
                                                </td>
                                                <td>
                                                    <input asp-for="@Model.Tasks.FirstOrDefault(s=>s.StaffInterviewTaskId==item.StaffInterviewTaskId).Score" type="text" class="form-control" />
                                                    <span asp-validation-for="@Model.Tasks.FirstOrDefault().Score" class="text-danger"></span>
                                                </td>
                                            </tr>

                                        }

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">

                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                            <div class="form-group">
                                <input type="text" class="form-control" id="sumPoint" />
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                            <div class="form-group">
                                <input type="text" class="form-control" id="sumScore" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-6 col-xs-12 col-md-6 col-lg-6">
                            <button type="submit" class="btn btn-primary pull-right">Submit</button>
                        </div>
                        <div class="form-group col-sm-6 col-xs-12 col-md-6 col-lg-6">
                            <a asp-action="ListHeading" asp-route-clientId="ClientId" class="btn btn-primary pull-left">Cancel</a>
                        </div>
                    </div>
                </form>
                <table class="table table-hover table-bordered" id="task" style="display:none;">
                    <thead>
                        <tr>
                            <th> Title </th>
                            <th> Answer </th>
                            <th>Comment</th>
                            <th>Point</th>
                            <th>Score</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <input type="hidden" asp-for="@Model.Tasks.FirstOrDefault().StaffInterviewTaskId" value="0" />
                                <baserecord asp-key="@Model.Heading" asp-for="@Model.Tasks.FirstOrDefault().Title" asp-items="null" />
                                <span asp-validation-for="@Model.Tasks.FirstOrDefault().Title" class="text-danger"></span>
                            </td>
                            <td>
                                <baserecord asp-key="Staff_Interview_Answer" asp-for="@Model.Tasks.FirstOrDefault().Answer" asp-items="null" />
                                <span asp-validation-for="@Model.Tasks.FirstOrDefault().Answer" class="text-danger"></span>
                            </td>
                            <td>
                                <input asp-for="@Model.Tasks.FirstOrDefault().Comment" type="text" class="form-control" value="0" />
                                <span asp-validation-for="@Model.Tasks.FirstOrDefault().Comment" class="text-danger"></span>
                            </td>
                            <td>
                                <input asp-for="@Model.Tasks.FirstOrDefault().Point" type="text" class="form-control" value="10" />
                                <span asp-validation-for="@Model.Tasks.FirstOrDefault().Point" class="text-danger"></span>
                            </td>
                            <td>
                                <input asp-for="@Model.Tasks.FirstOrDefault().Score" type="text" class="form-control" value="0" />
                                <span asp-validation-for="@Model.Tasks.FirstOrDefault().Score" class="text-danger"></span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section VendorScripts{
    <script src="../../../assets/vendor/jquery-steps/jquery.steps.js"></script> <!-- JQuery Steps Plugin Js -->
    <script src="../../../assets/vendor/dropify/js/dropify.min.js"></script>
    <script src="../../../assets/bundles/mainscripts.bundle.js"></script>
}

@section Scripts{
    <script src="../../../assets/js/pages/forms/form-wizard.js"></script>
    <script src="../../../assets/js/pages/forms/dropify.js"></script>
    <script>
        $(function () {

            $(document).ready(function () {
                var Point = 0;
                var Score = 0;
                $("#tbl_Task tbody tr").each(function () {
                    Point += parseFloat($(this).find("td:eq(3) input[type='text']").val());
                    Score += parseFloat($(this).find("td:eq(4) input[type='text']").val());
                });
                $('#sumPoint').val();
                $('#sumScore').val();
                $('#sumPoint').val(Point);
                $('#sumScore').val(Score);
            });

            var table = $('#tbl_Task').DataTable({
                scrollCollapse: true,
                select: {
                    style: 'single'
                },
                searching: false, paging: false, info: false
            });
            var counter = $("#TaskCount").val();
            $('#Addrow').on('click', function () {
                counter++;
                var clone = $("#task tr:last").clone();
                clone.attr('id', 'row-' + counter);
                table.rows.add(clone).draw();
                $('#TaskCount').val(counter);

            });
            $('#tbl_Task tbody').on('click', 'tr', function () {
                if ($(this).hasClass('selected')) {
                    $(this).removeClass('selected');
                }
                else {
                    table.$('tr.selected').removeClass('selected');
                    $(this).addClass('selected');
                }
            });
            $('#Delrow').click(function () {
                const id = table.row('.selected').id();
                if (table.row('.selected').length > 0) {
                    const row = table.rows('.selected').remove().draw();
                    counter--;
                    $('#TaskCount').val(counter);
                }
                else {
                    alert("Please select row for delete !");
                }
            });
        });
    </script>
}


