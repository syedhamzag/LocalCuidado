                            <li><a href="javascript:void(0);">Payment info</a></li>
                            <li><a href="javascript:void(0);">Auto-Renewal</a></li>
                            <li class="menu-button m-t-30">
                                <a href="javascript:void(0);" class="btn btn-primary"><i class="icon-question"></i> Need Help?</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        @await Component.InvokeAsync(nameof(Menu))

        <div id="main-content">
            <div class="container">
                <div class="block-header">
                    <div class="row">
                        <div class="col-lg-6 col-md-8 col-sm-12">
                            <h2> @ViewData["Title"]</h2>
                            <breadcrumb></breadcrumb>

                        </div>

                    </div>
                </div>

                @if ( TempData["OperationStatus"] != null)
                {

                    var operationStatus =  JsonConvert.DeserializeObject<AwesomeCare.Admin.Models.OperationStatus>(TempData["OperationStatus"]?.ToString());
                    if (operationStatus.IsSuccessful)
                    {
                        <div class="alert alert-success alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <i class="fa fa-check-circle"></i> @operationStatus.Message
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <i class="fa fa-times-circle"></i>  @operationStatus.Message
                        </div>
                    }
                }
                @RenderBody()



            </div>
