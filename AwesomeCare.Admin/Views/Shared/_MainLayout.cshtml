    <script src="/assets/vendor/nouislider/nouislider.js"></script> <!-- noUISlider Plugin Js -->
    <script src="/assets/vendor/parsleyjs/js/parsley.min.js"></script>
    <script src="/assets/vendor/boostrap-multiselect2/js/bootstrap-select.js"></script>
    <script src="/assets/vendor/Chosen/js/chosen.jquery.min.js"></script>
    @RenderSection("VendorScripts", required: false)


    <script src="/assets/bundles/mainscripts.bundle.js"></script>
    <script src="/assets/js/pages/forms/advanced-form-elements.js"></script>

    <script>
        $(document).ready(function () {
            
            // Multiselect
            //$('.multiselect').multiselect({
            //    maxHeight: 300
            //});
            $('.multiselectfilter').multiselect({
                enableFiltering: true,
                enableCaseInsensitiveFiltering: true,
                maxHeight: 200
            });

            var date = new Date();
            date.setDate(date.getDate());
            $('.datepickerfromtoday').datepicker({
                startDate: date,
                todayBtn: true
            })

            $(".chosen-select").chosen({ no_results_text: "Oops, nothing found!" }); 
        })
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
