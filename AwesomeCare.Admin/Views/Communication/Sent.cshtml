@using AwesomeCare.DataTransferObject.DTOs.Communication;

@model SentMessage
@{
    ViewData["Title"] = "Communication - Sent Details";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12">
        <div class="card planned_task">
            <div class="header">
                <h2>Sent</h2>

            </div>
            <div class="body">

                <div class="form-group">
                    <label asp-for="Receiver" class="control-label"></label>
                    <input asp-for="Receiver" class="form-control" readonly />

                </div>
                <div class="form-group">
                    <label asp-for="Subject" class="control-label"></label>
                    <input class="form-control" asp-for="Subject" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="CommuncationDate" class="control-label"></label>
                    <input class="form-control" asp-for="CommuncationDate" readonly />
                </div>
                <hr>
                <div class="form-group">
                    <label asp-for="Message" class="control-label"></label>
                    <p>
                        @Html.Raw(Model.Message)
                    </p>

                </div>

                <div class="m-t-30">

                    <a asp-controller="Communication" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>

            </div>
        </div>
    </div>
</div>

