@using AwesomeCare.Admin.ViewModels.ClientMgtVisit;
@model CreateClientMgtVisit
@{
    ViewData["Title"] = "View Client Mgt Visit";
}
@section HeaderScripts{
    <link rel="stylesheet" href="../../../assets/vendor/jquery-steps/jquery.steps.css">
    <link rel="stylesheet" href="../../../assets/vendor/dropify/css/dropify.min.css">
}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12">
        <div class="card planned_task">
            <div class="header">

                <h2></h2>

            </div>
            <div class="body">
                <form asp-route="Edit" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-xs-8 col-sm-8 col-md-8">
                            <input type="hidden" asp-for="VisitId" />
                            <input type="hidden" asp-for="ClientId" />
                            <div class="row">

                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">DATE</label>
                                    <label class="control-label">@Model.Date</label>
                                </div>
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Next Check Date</label>
                                    <label class="control-label">@Model.NextCheckDate</label>
                                </div>
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Deadline</label>
                                    <label class="control-label">@Model.Deadline</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Rate Service Receiving</label>
                                    <label class="control-label">@Model.RateServiceRecieving</label>
                                </div>
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Rate Service Manager</label>
                                    <label class="control-label">@Model.RateManagers</label>
                                </div>
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Staff Best Support</label>
                                    <label class="control-label">@Model.Staff_Name.ToList()</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">How To Complain</label>
                                    <label class="control-label">@Model.HowToComplain</label>
                                </div>
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Service Recommended</label>
                                    <label class="control-label">@Model.ServiceRecommended</label>
                                </div>
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Officer to Take Action</label>
                                    <label class="control-label">@Model.OfficerName.ToList()</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Reference</label>
                                    <label class="control-label">@Model.Reference</label>
                                </div>
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Rot Cause</label>
                                    <label class="control-label">@Model.RotCause</label>
                                </div>
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Log URL</label>
                                    <label class="control-label">@Model.URL</label>

                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Remark/Closing Comment</label>
                                    <label class="control-label">@Model.Remarks</label>

                                </div>
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Status</label>
                                    <label class="control-label">@Model.Status</label>

                                </div>
                            </div>


                            <div class="row">
                                <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                    <label class="control-label">Improvement Do You Expect</label>
                                    <label class="control-label">@Model.ImprovementExpect</label>

                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                    <label class="control-label">Action Required</label>
                                    <label class="control-label">@Model.ActionRequired</label>

                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                    <label class="control-label">Actions Taken By MPCC</label>
                                    <label class="control-label">@Model.ActionsTakenByMPCC</label>

                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                    <label class="control-label">Observations</label>
                                    <label class="control-label">@Model.Observation</label>

                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                    <label class="control-label">Lesson Learnt and Shared</label>
                                    <label class="control-label">@Model.LessonLearntAndShared</label>

                                </div>
                            </div>


                        </div>
                        <div class="col-xs-4 col-sm-4 col-md-4">
                            <div class="card">
                                <div class="header">
                                    <h2>Evidence<small></small></h2>
                                </div>
                                <div class="body">
                                    <img src="@Model.EvidenceOfActionTaken" alt="image" />
                                </div>
                            </div>
                            <div class="card">
                                <div class="header">
                                    <h2>Attach<small></small></h2>
                                </div>
                                <div class="body">
                                    <img src="@Model.Attachment" alt="image" />
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-sm-6 col-xs-12 col-md-4 col-lg-6">
                                    <button type="submit" class="btn btn-primary pull-right">Submit</button>
                                </div>
                                <div class="form-group col-sm-6 col-xs-12 col-md-4 col-lg-6">
                                    <a asp-action="Index" asp-route-clientId="@Model.ClientId" class="btn btn-primary pull-left">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section VendorScripts{
    <script src="../../../assets/vendor/jquery-steps/jquery.steps.js"></script> <!-- JQuery Steps Plugin Js -->
    <script src="../../../assets/vendor/dropify/js/dropify.min.js"></script>
    <script src="../../../assets/bundles/mainscripts.bundle.js"></script>
}

@section Scripts{
    <script src="../../../assets/js/pages/forms/form-wizard.js"></script>
    <script src="../../../assets/js/pages/forms/dropify.js"></script>
}

