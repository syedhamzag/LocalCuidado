@using AwesomeCare.Admin.ViewModels.Hobbies;
@model Createhobbies

@{
    ViewData["Title"] = "Edit Hobbies";
}

    <div class="row clearfix">
        <div class="col-lg-12 col-md-12">
            <div class="card planned_task">
                <div class="card-body">

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="HId" />
                        <div class="row">
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label asp-for="Name"></label>
                                <input type="text" asp-for="Name" class="form-control">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label asp-for="Description"></label>
                                <input type="text" asp-for="Description" class="form-control">
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>


                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a asp-action="Index" asp-controller="Hobbies" class="btn btn-primary pull-right">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>