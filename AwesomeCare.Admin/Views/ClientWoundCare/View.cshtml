@using AwesomeCare.Admin.ViewModels.Client;
@model CreateClientWoundCare
@{
    ViewData["Title"] = "View Client Wound Care";
}
@section HeaderScripts{
    <link rel="stylesheet" href="../../../assets/vendor/jquery-steps/jquery.steps.css">
    <link rel="stylesheet" href="../../../assets/vendor/dropify/css/dropify.min.css">
}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12">
        <div class="card planned_task">
            <div class="header">
                <h2></h2>
            </div>
            <div class="body">
                <form asp-route="Edit" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-xs-8 col-sm-8 col-md-8">
                            <input type="hidden" asp-for="WoundCareId" />
                            <input type="hidden" asp-for="ClientId" />
                            <div class="row">
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Date</label>
                                    <label class="control-label">@Model.Date</label>
                                </div>
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Time</label>
                                    <label class="control-label">@Model.Time</label>
                                </div>
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Deadline</label>
                                    <label class="control-label">@Model.Deadline</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Officer To Act</label>
                                    <label class="control-label">@Model.OfficerName.ToList()</label>
                                </div>
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Staff Name</label>
                                    <label class="control-label">@Model.Staff_Name.ToList()</label>
                                </div>
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Physician Name</label>
                                    <label class="control-label">@Model.PhysicianName.ToList()</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Wound Status</label>
                                    <label class="control-label">@Model.StatusImage</label>
                                </div>
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Wound Type</label>
                                    <label class="control-label">@Model.Type</label>
                                </div>
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Wound_Location</label>
                                    <label class="control-label">@Model.Location</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Measurement</label>
                                    <label class="control-label">@Model.Measurment</label>
                                </div>
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Pressure Ulcer Stage </label>
                                    <label class="control-label">@Model.UlcerStage</label>
                                </div>
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">WoundCare Goal</label>
                                    <label class="control-label">@Model.Goal</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Pain Level</label>
                                    <label class="control-label">@Model.PainLvl</label>
                                </div>
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Status</label>
                                    <label class="control-label">@Model.Status</label>
                                </div>
                                <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                    <label class="control-label">Wound Cause</label>
                                    <label class="control-label">@Model.WoundCause</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Reference</label>
                                    <label class="control-label">@Model.Reference</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                    <label class="control-label">Comment</label>
                                    <label class="control-label">@Model.Comment</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                    <label class="control-label">Physician Response</label>
                                    <label class="control-label">@Model.PhysicianResponse</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                    <label class="control-label">Remarks</label>
                                    <label class="control-label">@Model.Remarks</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-4 col-sm-4 col-md-4">
                            <div class="card">
                                <div class="header">
                                    <h2>Status Attachment<small></small></h2>
                                </div>
                                <div class="body">
                                    <img src="@Model.StatusAttach" alt="image" />
                                </div>
                            </div>
                            <div class="card">
                                <div class="header">
                                    <h2>Type Attachment<small></small></h2>
                                </div>
                                <div class="body">
                                    <img src="@Model.TypeAttach" alt="image" />
                                </div>
                            </div>
                            <div class="card">
                                <div class="header">
                                    <h2>Location Attachment<small></small></h2>
                                </div>
                                <div class="body">
                                    <img src="@Model.LocationAttach" alt="image" />
                                </div>
                            </div>
                            <div class="card">
                                <div class="header">
                                    <h2>UlcerStage Attachment<small></small></h2>
                                </div>
                                <div class="body">
                                    <img src="@Model.UlcerStageAttach" alt="image" />
                                </div>
                            </div>
                            <div class="card">
                                <div class="header">
                                    <h2>Measurement Attachment<small></small></h2>
                                </div>
                                <div class="body">
                                    <img src="@Model.MeasurementAttach" alt="image" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-6 col-xs-12 col-md-4 col-lg-6">
                                    <button type="submit" class="btn btn-primary pull-right">Submit</button>
                                </div>
                                <div class="form-group col-sm-6 col-xs-12 col-md-4 col-lg-6">
                                    <a asp-action="Index" asp-route-clientId="@Model.ClientId" class="btn btn-primary pull-left">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section VendorScripts{
    <script src="../../../assets/vendor/jquery-steps/jquery.steps.js"></script> <!-- JQuery Steps Plugin Js -->
    <script src="../../../assets/vendor/dropify/js/dropify.min.js"></script>
    <script src="../../../assets/bundles/mainscripts.bundle.js"></script>
}

@section Scripts{
    <script src="../../../assets/js/pages/forms/form-wizard.js"></script>
    <script src="../../../assets/js/pages/forms/dropify.js"></script>
}

