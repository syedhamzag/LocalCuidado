@using AwesomeCare.Admin.ViewModels.Client;
@model CreateClientWoundCare
@{
    ViewData["Title"] = "Update Client Wound Care";
}
@section HeaderScripts{
    <link rel="stylesheet" href="../../../assets/vendor/jquery-steps/jquery.steps.css">
    <link rel="stylesheet" href="../../../assets/vendor/dropify/css/dropify.min.css">
}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12">
        <div class="card planned_task">
            <div class="header">
                <h2></h2>
            </div>
            <div class="body">
                <form asp-route="Edit" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-xs-8 col-sm-8 col-md-8">
                            <input type="hidden" asp-for="WoundCareId" />
                            <input type="hidden" asp-for="ClientId" />
                            <input type="hidden" value="@Model.StatusAttach" asp-for="StatusAttach">
                            <input type="hidden" value="@Model.TypeAttach" asp-for="TypeAttach">
                            <input type="hidden" value="@Model.LocationAttach" asp-for="LocationAttach">
                            <input type="hidden" value="@Model.MeasurementAttach" asp-for="MeasurementAttach">
                            <input type="hidden" value="@Model.UlcerStageAttach" asp-for="UlcerStageAttach">
                            <div class="row">
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Date</label>
                                    <input type="text" asp-for="Date" class="form-control" data-provide="datepicker" data-date-autoclose="true" data-date-format="mm/dd/yyyy" />
                                    <span asp-validation-for="Date" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Time</label>
                                    <input type="text" asp-for="Time" class="form-control" data-provide="datepicker" data-date-autoclose="true" data-date-format="mm/dd/yyyy" />
                                    <span asp-validation-for="Time" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Deadline</label>
                                    <input type="text" asp-for="Deadline" class="form-control" data-provide="datepicker" data-date-autoclose="true" data-date-format="mm/dd/yyyy" />
                                    <span asp-validation-for="Deadline" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Officer To Act</label>
                                    <select asp-for="OfficerToAct" asp-items="@Model.OfficerToActList" class="selectpicker form-control" data-live-search="true" multiple></select>
                                    <span asp-validation-for="OfficerToAct" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Staff Name</label>
                                    <select asp-for="StaffName" asp-items="@Model.OfficerToActList" class="selectpicker form-control" data-live-search="true" multiple></select>
                                    <span asp-validation-for="StaffName" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Physician Name</label>
                                    <select asp-for="Physician" asp-items="@Model.OfficerToActList" class="selectpicker form-control" data-live-search="true" multiple></select>
                                    <span asp-validation-for="Physician" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Wound Status</label>
                                    <baserecord asp-key="Wound_Status" asp-for="StatusImage" asp-items="null" />
                                    <span asp-validation-for="StatusImage" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Wound Type</label>
                                    <baserecord asp-key="Wound_Type" asp-for="Type" asp-items="null" />
                                    <span asp-validation-for="Type" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Wound_Location</label>
                                    <baserecord asp-key="Wound_Location" asp-for="Location" asp-items="null" />
                                    <span asp-validation-for="Location" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Measurement</label>
                                    <baserecord asp-key="Measurement" asp-for="Measurment" asp-items="null" />
                                    <span asp-validation-for="Measurment" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Pressure Ulcer Stage </label>
                                    <baserecord asp-key="Pressure_Ulcer_Stage" asp-for="UlcerStage" asp-items="null" />
                                    <span asp-validation-for="UlcerStage" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">WoundCare Goal</label>
                                    <baserecord asp-key="WoundCare_Goal" asp-for="Goal" asp-items="null" />
                                    <span asp-validation-for="Goal" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Pain Level</label>
                                    <baserecord asp-key="Pain_Level" asp-for="PainLvl" asp-items="null" />
                                    <span asp-validation-for="PainLvl" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Status</label>
                                    <baserecord asp-key="Tele_Health_Status" asp-for="Status" asp-items="null" />
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Wound Cause</label>
                                    <baserecord asp-key="Wound_Cause" asp-for="WoundCause" asp-items="null" />
                                    <span asp-validation-for="WoundCause" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Reference</label>
                                    <input type="text" asp-for="Reference" class="form-control" />
                                    <span asp-validation-for="Reference" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                    <label class="control-label">Comment</label>
                                    <textarea type="text" asp-for="Comment" class="form-control"></textarea>
                                    <span asp-validation-for="Comment" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                    <label class="control-label">Physician Response</label>
                                    <textarea type="text" asp-for="PhysicianResponse" class="form-control"></textarea>
                                    <span asp-validation-for="PhysicianResponse" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                    <label class="control-label">Remarks</label>
                                    <textarea type="text" asp-for="Remarks" class="form-control"></textarea>
                                    <span asp-validation-for="Remarks" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-4 col-sm-4 col-md-4">
                            <div class="card">
                                <div class="header">
                                    <h2>Status Attachment<small></small></h2>
                                </div>
                                <div class="body">
                                    <input type="file" asp-for="StatusAttachment" class="dropify" accept=".png, .jpg, .jpeg, .pdf, .xlsx, .docx">
                                    <span asp-validation-for="StatusAttachment" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="card">
                                <div class="header">
                                    <h2>Type Attachment<small></small></h2>
                                </div>
                                <div class="body">
                                    <input type="file" asp-for="TypeAttachment" class="dropify" accept=".png, .jpg, .jpeg, .pdf, .xlsx, .docx">
                                    <span asp-validation-for="TypeAttachment" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="card">
                                <div class="header">
                                    <h2>Location Attachment<small></small></h2>
                                </div>
                                <div class="body">
                                    <input type="file" asp-for="LocationAttachment" class="dropify" accept=".png, .jpg, .jpeg, .pdf, .xlsx, .docx">
                                    <span asp-validation-for="LocationAttachment" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="card">
                                <div class="header">
                                    <h2>UlcerStage Attachment<small></small></h2>
                                </div>
                                <div class="body">
                                    <input type="file" asp-for="UlcerStageAttachment" class="dropify" accept=".png, .jpg, .jpeg, .pdf, .xlsx, .docx">
                                    <span asp-validation-for="UlcerStageAttachment" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="card">
                                <div class="header">
                                    <h2>Measurement Attachment<small></small></h2>
                                </div>
                                <div class="body">
                                    <input type="file" asp-for="MeasurementAttachment" class="dropify" accept=".png, .jpg, .jpeg, .pdf, .xlsx, .docx">
                                    <span asp-validation-for="MeasurementAttachment" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-6 col-xs-12 col-md-4 col-lg-6">
                                    <button type="submit" class="btn btn-primary pull-right">Submit</button>
                                </div>
                                <div class="form-group col-sm-6 col-xs-12 col-md-4 col-lg-6">
                                    <a asp-action="Index" asp-route-clientId="@Model.ClientId" class="btn btn-primary pull-left">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section VendorScripts{
    <script src="../../../assets/vendor/jquery-steps/jquery.steps.js"></script> <!-- JQuery Steps Plugin Js -->
    <script src="../../../assets/vendor/dropify/js/dropify.min.js"></script>
    <script src="../../../assets/bundles/mainscripts.bundle.js"></script>
}

@section Scripts{
    <script src="../../../assets/js/pages/forms/form-wizard.js"></script>
    <script src="../../../assets/js/pages/forms/dropify.js"></script>
}

