@using AwesomeCare.Admin.ViewModels.CarePlan.PersonalHygiene;
@model CreatePersonalHygiene
@{
    ViewData["Title"] = "Update Personal Hygiene";
}
@section HeaderScripts{
    <link rel="stylesheet" href="../../../assets/vendor/jquery-steps/jquery.steps.css">
    <link rel="stylesheet" href="../../../assets/vendor/dropify/css/dropify.min.css">
}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12">
        <div class="card planned_task">
            <div class="header">

                <h2></h2>

            </div>
            <div class="body">
                <form asp-route="PersonalHygiene" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            <input type="hidden" asp-for="HygieneId" />
                            <input type="hidden" asp-for="ClientId" />
                            <div class="row">

                                <div class="form-group col-sm-4 col-md-4 col-xs-12 col-lg-4">
                                    <label class="control-label">Cleaning</label>
                                    <baserecord asp-key="Cleaning" asp-for="Cleaning" asp-items="null" />
                                    <span asp-validation-for="Cleaning" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-4 col-md-4 col-xs-12 col-lg-4">
                                    <label class="control-label">Cleaning Tools Location</label>
                                    <baserecord asp-key="CleaningTools" asp-for="CleaningTools" asp-items="null" />
                                    <span asp-validation-for="CleaningTools" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-4 col-md-4 col-xs-12 col-lg-4">
                                    <label class="control-label">Who Does My Cleaning</label>
                                    <baserecord asp-key="WhoClean" asp-for="WhoClean" asp-items="null" />
                                    <span asp-validation-for="WhoClean" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-sm-4 col-md-4 col-xs-12 col-lg-4">
                                    <label class="control-label">How I Want Cleaning</label>
                                    <baserecord asp-key="Desired_Cleaning" asp-for="DesiredCleaning" asp-items="null" />
                                    <span asp-validation-for="DesiredCleaning" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-4 col-md-4 col-xs-12 col-lg-4">
                                    <label class="control-label">How Often Do I Want Cleaning</label>
                                    <baserecord asp-key="Cleaning_Freq" asp-for="CleaningFreq" asp-items="null" />
                                    <span asp-validation-for="CleaningFreq" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-4 col-md-4 col-xs-12 col-lg-4">
                                    <label class="control-label">General Cleaning Appliance</label>
                                    <baserecord asp-key="General_Appliance" asp-for="GeneralAppliance" asp-items="null" />
                                    <span asp-validation-for="GeneralAppliance" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-sm-4 col-md-4 col-xs-12 col-lg-4">
                                    <label class="control-label">Dirty Laundry Location</label>
                                    <baserecord asp-key="Dirty_Laundry" asp-for="DirtyLaundry" asp-items="null" />
                                    <span asp-validation-for="DirtyLaundry" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-4 col-md-4 col-xs-12 col-lg-4">
                                    <label class="control-label">How To Dry Laundry</label>
                                    <baserecord asp-key="Dry_Laundry" asp-for="DryLaundry" asp-items="null" />
                                    <span asp-validation-for="DryLaundry" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-4 col-md-4 col-xs-12 col-lg-4">
                                    <label class="control-label">Washing Machine Location</label>
                                    <baserecord asp-key="Washing_Machine" asp-for="WashingMachine" asp-items="null" />
                                    <span asp-validation-for="WashingMachine" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-sm-4 col-md-4 col-xs-12 col-lg-4">
                                    <label class="control-label">Ironing</label>
                                    <baserecord asp-key="Ironing" asp-for="Ironing" asp-items="null" />
                                    <span asp-validation-for="Ironing" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                    <label class="control-label">General Washing Instructions</label>
                                    <textarea type="text" asp-for="LaundryGuide" class="form-control"></textarea>
                                    <span asp-validation-for="LaundryGuide" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                    <label class="control-label">Practical Support For Laundry</label>
                                    <textarea type="text" asp-for="LaundrySupport" class="form-control"></textarea>
                                    <span asp-validation-for="LaundrySupport" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-sm-6 col-xs-12 col-md-4 col-lg-6">
                                    <button type="submit" class="btn btn-primary pull-right">Submit</button>
                                </div>
                                <div class="form-group col-sm-6 col-xs-12 col-md-4 col-lg-6">
                                    <a asp-action="Index" asp-route-clientId="@Model.ClientId" class="btn btn-primary pull-left">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section VendorScripts{
    <script src="../../../assets/vendor/jquery-steps/jquery.steps.js"></script> <!-- JQuery Steps Plugin Js -->
    <script src="../../../assets/vendor/dropify/js/dropify.min.js"></script>
    <script src="../../../assets/bundles/mainscripts.bundle.js"></script>
}

@section Scripts{
    <script src="../../../assets/js/pages/forms/form-wizard.js"></script>
    <script src="../../../assets/js/pages/forms/dropify.js"></script>
}