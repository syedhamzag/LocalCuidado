@using AwesomeCare.Admin.ViewModels.ClientPerformance;

@model CreatePerformanceIndicator
@{
    ViewData["Title"] = "Client Performance Indicator Heading";
}
@section HeaderScripts{
    <link rel="stylesheet" href="../../../assets/vendor/jquery-steps/jquery.steps.css">
    <link rel="stylesheet" href="../../../assets/vendor/dropify/css/dropify.min.css">
}
<div class="row clearfix">
    <div class="col-md-12" id="accordion">
        <div class="card">
            <div class="card-header">
                <h2>@Model.ClientName</h2>
            </div>
            <div class="body clearfix">
                <form asp-action="ListHeading" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="ClientId" />
                    <input type="hidden" asp-for="PerformanceIndicatorId" />
                    <div class="row">
                        <div class="col-sm-4 col-xs-12 col-md-4 col-lg-4">
                            <div class="form-group">
                                <label class="control-label">Heading</label>
                                <baserecord asp-key="Performance_Indicator_Heading" asp-items="null" asp-for="HeadingId" class="form-control" />
                                <span asp-validation-for="HeadingId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-4 col-xs-12 col-md-4 col-lg-4">
                            <div class="form-group">
                                <label class="control-label">Date</label>
                                <input type="text" asp-for="Date" class="form-control" data-provide="datepicker" data-date-autoclose="true" data-date-format="mm/dd/yyyy" />
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-4 col-xs-12 col-md-4 col-lg-4">
                            <div class="form-group">
                                <label class="control-label">Due Date</label>
                                <input type="text" asp-for="DueDate" class="form-control" data-provide="datepicker" data-date-autoclose="true" data-date-format="mm/dd/yyyy" />
                                <span asp-validation-for="DueDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-12 col-lg-12 col-xs-12">
                            <div class="form-group">
                                <label class="control-label">Remarks</label>
                                <textarea type="text" asp-for="Remarks" class="form-control"></textarea>
                                <span asp-validation-for="Remarks" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-9 col-md-9 col-lg-9 col-xs-12">
                            <label>Rate your organisation's current overall position as Red, Amber or Green.</label>
                        </div>
                        <div class="col-sm-3 col-md-3 col-lg-3 col-xs-12">
                            <baserecord asp-key="Performance_Indicator_Rating" asp-items="null" asp-for="Rating" class="form-control" />
                        </div>
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary pull-right">Submit</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h2>Performance Indicator Headings</h2>

            </div>
            <div class="card-body">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Heading</th>
                            <th>Task</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.HeadingList)
                        {
                            <tr>
                                <td>
                                    @item.Text
                                </td>
                                <td>
                                    <a asp-action="Index" asp-route-performanceId="@Model.PerformanceIndicatorId" class="btn btn-success btn-sm">Tasks</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section VendorScripts{
    <script src="../../../assets/vendor/jquery-steps/jquery.steps.js"></script> <!-- JQuery Steps Plugin Js -->
    <script src="../../../assets/vendor/dropify/js/dropify.min.js"></script>
    <script src="../../../assets/bundles/mainscripts.bundle.js"></script>
}

@section Scripts{
    <script src="../../../assets/js/pages/forms/form-wizard.js"></script>
    <script src="../../../assets/js/pages/forms/dropify.js"></script>
}