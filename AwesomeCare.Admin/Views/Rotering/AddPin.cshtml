@using AwesomeCare.DataTransferObject.DTOs.Rotering;
@model PostRotaPin
@{
    ViewData["Title"] = "Add Pin";
}

<form asp-action="AddPin" method="post">
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12">
            <div class="card planned_task">
                <div class="card-header">
                    <h2>Add New Pin</h2>

                </div>
                <div class="card-body">
                    <div class="form-group col-sm-12">
                        <label for="text-input1">Pin</label>
                        <input type="text" class="form-control" asp-for="Pin">
                    </div>

                    <div class="form-group col-sm-12">
                        <label for="text-input1">BaseRecord Key</label>
                        <input type="text" class="form-control" placeholder="Without Space" asp-for="Key">
                    </div>

                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a class="btn btn-outline-secondary" asp-action="AddPin">Cancel</a>
                    </div>

                </div>
            </div>
        </div>
    </div>

</form>
