@using AwesomeCare.Admin.ViewModels.CarePlan;
@using AwesomeCare.DataTransferObject.DTOs.PersonalDetail.Equipment;
@model CreateCarePlan
@{ ViewData["Title"] = "Create Personal Detail"; }
<div class="row clearfix">
    <div class="col-lg-12 col-md-12">
        <div class="card planned_task">
            <div class="card-header">
                <h2></h2>
            </div>
            <div class="card-body">
                <form asp-route="PersonalDetail" method="post" enctype="multipart/form-data">

                    <input type="hidden" asp-for="PersonalDetailId" />
                    <input type="hidden" asp-for="ClientId" />

                    <h4>Person Centredness</h4>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="row">
                                <div class="btn-group form-group col-sm-10 col-xs-12 col-md-10 col-lg-10" role="group"></div>
                                <div class="btn-group form-group col-sm-2 col-xs-12 col-md-2 col-lg-2" role="group">
                                    <button id="btnGroupDrop1" type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Add
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                        <a class="dropdown-item" id="btnClass1">INDIVIDUALITY</a>
                                        <a class="dropdown-item" id="btnClass2">RIGHTS & RESPECT</a>
                                        <a class="dropdown-item" id="btnClass3">CHOICE</a>
                                        <a class="dropdown-item" id="btnClass4">DIGNITY & PRIVACY</a>
                                        <a class="dropdown-item" id="btnClass5">PARTNERSHIP</a>
                                    </div>
                                </div>
                            </div>
                                <input type="hidden" asp-for="@Model.PersonCentreCount" value="@Model.PersonCentreCount" />
                                <table class="table table-hover table-bordered" id="tblPersonCentered">
                                    <thead>
                                        <tr>
                                            <th>Select</th>
                                            <th>Class</th>
                                            <th>Focus</th>
                                            <th>Expected Support</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    @{
                                        int i = 1;

                                        if (Model.GetPersonCentred.Count > 0)
                                        {
                                            int j = Model.GetPersonCentred.Count;
                                                
                                                foreach (var item in Model.GetPersonCentred)
                                                {
                                                    string key = @Model.ClassList.Where(s => s.Value == item.Class.ToString()).Select(s => s.Text).FirstOrDefault().ToString();
                                                    <tr id="@item.Class">
                                                        @{
                                                            if (Model.ClassList.Where(s => s.Value == item.Class.ToString()).Select(s => s.Text).FirstOrDefault().ToString() == "Individuality")
                                                            {
                                                                <td>
                                                                    <div class="fancy-checkbox">
                                                                        <label><input type="checkbox" class="selectDay" name="@string.Concat("isChecked1")" id="@string.Concat("isChecked1")" checked /><span><small> </small></span></label>
                                                                        <input type="hidden" id="@string.Concat("PersonCentredId1")" name="@string.Concat("PersonCentredId1")" value="@item.PersonCentredId" />
                                                                    </div>
                                                                </td>
                                                            }
                                                            if (Model.ClassList.Where(s => s.Value == item.Class.ToString()).Select(s => s.Text).FirstOrDefault().ToString() == "RightsAndRespect")
                                                            {
                                                               <td>
                                                                    <div class="fancy-checkbox">
                                                                        <label><input type="checkbox" class="selectDay" name="@string.Concat("isChecked2")" id="@string.Concat("isChecked2")" checked /><span><small> </small></span></label>
                                                                        <input type="hidden" id="@string.Concat("PersonCentredId2")" name="@string.Concat("PersonCentredId2")" value="@item.PersonCentredId" />
                                                                    </div>
                                                                </td>
                                                            }
                                                            if (Model.ClassList.Where(s => s.Value == item.Class.ToString()).Select(s => s.Text).FirstOrDefault().ToString() == "Choice")
                                                            {
                                                                <td>
                                                                    <div class="fancy-checkbox">
                                                                        <label><input type="checkbox" class="selectDay" name="@string.Concat("isChecked3")" id="@string.Concat("isChecked3")" checked /><span><small> </small></span></label>
                                                                        <input type="hidden" id="@string.Concat("PersonCentredId3")" name="@string.Concat("PersonCentredId3")" value="@item.PersonCentredId" />
                                                                    </div>
                                                                </td>
                                                            }
                                                            if (Model.ClassList.Where(s => s.Value == item.Class.ToString()).Select(s => s.Text).FirstOrDefault().ToString() == "DignityAndPrivacy")
                                                            {
                                                                <td>
                                                                    <div class="fancy-checkbox">
                                                                        <label><input type="checkbox" class="selectDay" name="@string.Concat("isChecked4")" id="@string.Concat("isChecked4")" checked /><span><small> </small></span></label>
                                                                        <input type="hidden" id="@string.Concat("PersonCentredId4")" name="@string.Concat("PersonCentredId4")" value="@item.PersonCentredId" />
                                                                    </div>
                                                                </td>
                                                            }
                                                            if (Model.ClassList.Where(s => s.Value == item.Class.ToString()).Select(s => s.Text).FirstOrDefault().ToString() == "Partnership")
                                                            {
                                                                <td>
                                                                    <div class="fancy-checkbox">
                                                                        <label><input type="checkbox" class="selectDay" name="@string.Concat("isChecked5")" id="@string.Concat("isChecked5")" checked /><span><small> </small></span></label>
                                                                        <input type="hidden" id="@string.Concat("PersonCentredId5")" name="@string.Concat("PersonCentredId5")" value="@item.PersonCentredId" />
                                                                    </div>
                                                                </td>
                                                            }
                                                        }
                                                        
                                                        @{
                                                            if (Model.ClassList.Where(s => s.Value == item.Class.ToString()).Select(s => s.Text).FirstOrDefault().ToString() == "Individuality")
                                                            {
                                                                <td>@Model.ClassList.Where(s => s.Value == item.Class.ToString()).Select(s => s.Text).FirstOrDefault() <input type="hidden" id="@string.Concat("Class1")" name="@string.Concat("Class1")" value="@item.Class" /></td>
                                                            }
                                                            if (Model.ClassList.Where(s => s.Value == item.Class.ToString()).Select(s => s.Text).FirstOrDefault().ToString() == "RightsAndRespect")
                                                            {
                                                               <td>@Model.ClassList.Where(s => s.Value == item.Class.ToString()).Select(s => s.Text).FirstOrDefault() <input type="hidden" id="@string.Concat("Class2")" name="@string.Concat("Class2")" value="@item.Class" /></td>
                                                            }
                                                            if (Model.ClassList.Where(s => s.Value == item.Class.ToString()).Select(s => s.Text).FirstOrDefault().ToString() == "Choice")
                                                            {
                                                                <td>@Model.ClassList.Where(s => s.Value == item.Class.ToString()).Select(s => s.Text).FirstOrDefault() <input type="hidden" id="@string.Concat("Class3")" name="@string.Concat("Class3")" value="@item.Class" /></td>
                                                            }
                                                            if (Model.ClassList.Where(s => s.Value == item.Class.ToString()).Select(s => s.Text).FirstOrDefault().ToString() == "DignityAndPrivacy")
                                                            {
                                                                <td>@Model.ClassList.Where(s => s.Value == item.Class.ToString()).Select(s => s.Text).FirstOrDefault() <input type="hidden" id="@string.Concat("Class4")" name="@string.Concat("Class4")" value="@item.Class" /></td>
                                                            }
                                                            if (Model.ClassList.Where(s => s.Value == item.Class.ToString()).Select(s => s.Text).FirstOrDefault().ToString() == "Partnership")
                                                            {
                                                                <td>@Model.ClassList.Where(s => s.Value == item.Class.ToString()).Select(s => s.Text).FirstOrDefault() <input type="hidden" id="@string.Concat("Class5")" name="@string.Concat("Class5")" value="@item.Class" /></td>
                                                            }
                                                        }
                                                        @{
                                                            if (i == 1)
                                                            {
                                                                <td><select asp-for="@Model.Focus1" asp-items="@Model.FocusList.Where(s=>s.Key==key).Select(s=>s.Value).FirstOrDefault()" class="selectpicker form-control" multiple></select></td>
                                                            }
                                                            if (i == 2)
                                                            {
                                                                <td><select asp-for="@Model.Focus2" asp-items="@Model.FocusList.Where(s=>s.Key==key).Select(s=>s.Value).FirstOrDefault()" class="selectpicker form-control" multiple></select></td>
                                                            }
                                                            if (i == 3)
                                                            {
                                                                <td><select asp-for="@Model.Focus3" asp-items="@Model.FocusList.Where(s=>s.Key==key).Select(s=>s.Value).FirstOrDefault()" class="selectpicker form-control" multiple></select></td>
                                                            }
                                                            if (i == 4)
                                                            {
                                                                <td><select asp-for="@Model.Focus4" asp-items="@Model.FocusList.Where(s=>s.Key==key).Select(s=>s.Value).FirstOrDefault()" class="selectpicker form-control" multiple></select></td>
                                                            }
                                                            if (i == 5)
                                                            {
                                                                <td><select asp-for="@Model.Focus5" asp-items="@Model.FocusList.Where(s=>s.Key==key).Select(s=>s.Value).FirstOrDefault()" class="selectpicker form-control" multiple></select></td>
                                                            }

                                                        }
                                                        <td><textarea name="@string.Concat("ExpSupport",i)" class="form-control">@item.ExpSupport</textarea></td>
                                                    </tr>
                                                    i++;
                                                }
                                                var k = 0;
                                                foreach (var item1 in Model.ClassList)
                                                {
                                                        

                                                    <tr id="@string.Concat("trClass",(k+1))" style="display:none">
                                                        <td>
                                                            <div class="fancy-checkbox">
                                                                <label><input type="checkbox" class="selectDay" name="@string.Concat("isChecked",(k+1))" id="@string.Concat("isChecked",(k+1))" /><span><small> </small></span></label>
                                                                <input type="hidden" id="@string.Concat("PersonCentredId",(k+1))" name="@string.Concat("PersonCentredId",(k+1))" value="0" />
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <select id="@string.Concat("Class",(k+1))" name="@string.Concat("Class",(k+1))" class="selectpicker form-control">
                                                                <option value="@item1.Value">@item1.Text</option>
                                                            </select>
                                                        </td>
                                                        <td>
                                                            <select id="@string.Concat("Focus",(k+1))" name="@string.Concat("Focus",(k+1))" asp-items="@Model.FocusList.Where(s=>s.Key==item1.Text.ToString()).Select(s=>s.Value).FirstOrDefault()" class="selectpicker form-control" multiple>
                                                            </select>
                                                        </td>
                                                        <td><textarea id="@string.Concat("ExpSupport",(k+1))" name="@string.Concat("ExpSupport",(k+1))" class="form-control"></textarea></td>
                                                    </tr>
                                                    k++;

                                                }
                                         }
                                        else
                                        {
                                            @foreach (var item in Model.ClassList)
                                            {

                                                <tr id="@string.Concat("trClass",i)" style="display:none">
                                                    <td>
                                                        <div class="fancy-checkbox">
                                                            <label><input type="checkbox" class="selectDay" name="@string.Concat("isChecked",i)" id="@string.Concat("isChecked",i)" /><span><small> </small></span></label>
                                                            <input type="hidden" id="@string.Concat("PersonCentredId",i)" name="@string.Concat("PersonCentredId",i)" value="0" />
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <select id="@string.Concat("Class",i)" name="@string.Concat("Class",i)" class="selectpicker form-control">
                                                            <option value="@item.Value">@item.Text</option>
                                                        </select>
                                                    </td>
                                                    <td>
                                                        <select id="@string.Concat("Focus",i)" name="@string.Concat("Focus",i)" asp-items="@Model.FocusList.Where(s=>s.Key==item.Text.ToString()).Select(s=>s.Value).FirstOrDefault()" class="selectpicker form-control" multiple>
                                                        </select>
                                                    </td>
                                                    <td><textarea id="@string.Concat("ExpSupport",i)" name="@string.Concat("ExpSupport",i)" class="form-control"></textarea></td>
                                                </tr>
                                                i++;

                                            }
                                        }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    <h4>Capacity</h4>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            <input type="hidden" asp-for="CapacityId" />
                            <div class="row">
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Pointer</label>
                                    <baserecord asp-key="Capacity_Pointer" asp-for="Pointer" asp-items="null" />
                                    <span asp-validation-for="Pointer" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Implications</label>
                                    <baserecord asp-key="Capacity_Implications" asp-for="Implications" asp-items="null" />
                                    <span asp-validation-for="Implications" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                    <label class="control-label">Indicators</label>
                                    <select asp-for="Indicator" asp-items="@Model.IndicatorList" class="selectpicker form-control" data-live-search="true" multiple></select>
                                    <span asp-validation-for="Indicator" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h4>Personal</h4>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            <input type="hidden" asp-for="PersonalId" />
                            <div class="row">
                                <div class="form-group col-sm-6 col-xs-12 col-md-6 col-lg-6">
                                    <label class="control-label">Smoking</label>
                                    <baserecord asp-key="Smoking" asp-for="Smoking" asp-items="null" />
                                    <span asp-validation-for="Smoking" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-6 col-xs-12 col-md-6 col-lg-6">
                                    <label class="control-label">DNR in Place</label>
                                    <baserecord asp-key="DNR" asp-for="DNR" asp-items="null" />
                                    <span asp-validation-for="DNR" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-6 col-xs-12 col-md-6 col-lg-6">
                                    <label class="control-label">Religion</label>
                                    <input type="text" asp-for="Religion" value="@Model.Religion" class="form-control" />
                                    <span asp-validation-for="Religion" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-6 col-xs-12 col-md-6 col-lg-6">
                                    <label class="control-label">Nationality</label>
                                    <input type="text" asp-for="Nationality" value="@Model.Nationality" class="form-control" />
                                    <span asp-validation-for="Nationality" class="text-danger"></span>
                                </div>
