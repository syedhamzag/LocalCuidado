@using System.Globalization;
@using AwesomeCare.Admin.ViewModels.OfficeAttendance;
@model CreateAttendance
@{
    ViewData["Title"] = "Update Office Attendance";
}

    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="card planned_task">
                <div class="card-body">

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="AttendanceId" />
                        <div class="row">
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label>Staff</label>
                                <select asp-for="Staff" asp-items="Model.StaffList" class="selectpicker form-control" data-live-search="true">
                                    </select>
                                <span asp-validation-for="Staff" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label>Date</label>
                                <input type="text" asp-for="Date"  class="form-control" />
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label>Job Title</label>
                                <input type="text" asp-for="JobTitle"  class="form-control" />
                                <span asp-validation-for="JobTitle" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label>Location</label>
                                <input type="text" asp-for="Location"  class="form-control" />
                                <span asp-validation-for="Location" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label>ClockInAddress</label>
                                <input type="text" asp-for="ClockInAddress"  class="form-control" />
                                <span asp-validation-for="ClockInAddress" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label>ClockInDistance</label>
                                <input type="text" asp-for="ClockInDistance"  class="form-control" />
                                <span asp-validation-for="ClockInDistance" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label>ClockOutAddress</label>
                                <input type="text" asp-for="ClockOutAddress"  class="form-control" />
                                <span asp-validation-for="ClockOutAddress" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label>ClockOutDistance</label>
                                <input type="text" asp-for="ClockOutDistance"  class="form-control" />
                                <span asp-validation-for="ClockOutDistance" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label>StartTime</label>
                                <input type="text" asp-for="StartTime"  class="form-control" />
                                <span asp-validation-for="StartTime" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label>StopTime</label>
                                <input type="text" asp-for="StopTime"  class="form-control" />
                                <span asp-validation-for="StopTime" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label>ClockIn</label>
                                <input type="text" asp-for="ClockIn"  class="form-control" />
                                <span asp-validation-for="ClockIn" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label>ClockOut</label>
                                <input type="text" asp-for="ClockOut"  class="form-control" />
                                <span asp-validation-for="ClockOut" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label>ClockInMethod</label>
                                <input type="text" asp-for="ClockInMethod"  class="form-control" />
                                <span asp-validation-for="ClockInMethod" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label>ClockOutMethod</label>
                                <input type="text" asp-for="ClockOutMethod"  class="form-control" />
                                <span asp-validation-for="ClockOutMethod" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label>ClockDiff</label>
                                <input type="text" asp-for="ClockDiff"  class="form-control" />
                                <span asp-validation-for="ClockDiff" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label>Remark</label>
                                <input type="text" asp-for="Remark"  class="form-control" />
                                <span asp-validation-for="Remark" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label>Latitude</label>
                                <input type="text" asp-for="Latitude"  class="form-control" />
                                <span asp-validation-for="Latitude" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label>Longitude</label>
                                <input type="text" asp-for="Longitude"  class="form-control" />
                                <span asp-validation-for="Longitude" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group col-sm-3 col-xs-12 col-md-3 col-lg-3">
                                <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
