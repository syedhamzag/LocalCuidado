@using AwesomeCare.Admin.ViewModels.ClientDailyTask;
@model CreateClientDailyTask
@{
    ViewData["Title"] = "Create Client Daily Task";
}
@section HeaderScripts{
    <link rel="stylesheet" href="../../../assets/vendor/jquery-steps/jquery.steps.css">
    <link rel="stylesheet" href="../../../assets/vendor/dropify/css/dropify.min.css">
}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12">
        <div class="card planned_task">
            <div class="header">

            </div>
            <div class="body">
                <form asp-controller="ClientDailyTask" asp-action="Index" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-lg-8 col-sm-8 col-md-8 col-xs-12">
                            <input type="hidden" asp-for="DailyTaskId" />
                            <input type="hidden" asp-for="ClientId" />
                            <input type="hidden" asp-for="Attachment" />
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="control-label">Date</label>
                                        <input type="text" data-provide="datepicker" asp-for="Date" data-date-autoclose="true" class="form-control" data-date-format="mm/dd/yyyy">

                                        <span asp-validation-for="Date" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="control-label">Ammendment Date</label>
                                        <input type="text" data-provide="datepicker" asp-for="AmendmentDate" data-date-autoclose="true" class="form-control" data-date-format="mm/dd/yyyy">

                                        <span asp-validation-for="AmendmentDate" class="text-danger"></span>


                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label class="control-label">Daily Task</label>
                                        <textarea asp-for="DailyTaskName" rows="500" class="form-control"></textarea>
                                        <span asp-validation-for="DailyTaskName" class="text-danger"></span>

                                    </div>
                                </div>
                            </div>                                                            
                        </div>
                        <div class="col-lg-4 col-sm-4 col-md-4 col-xs-12">
                            <div class="card">
                                <div class="header">
                                    <h2>Attachment<small></small></h2>
                                </div>
                                <div class="body">
                                    <input type="file" asp-for="Attach" class="dropify" accept=".png, .jpg, .jpeg, .pdf, .xlsx, .docx">
                                    <span asp-validation-for="Attach" class="text-danger"></span>
                                </div>
                            </div>


                            <div class="row">
                                <div class="form-group col-sm-6 col-xs-12 col-md-4 col-lg-6">
                                    <button type="submit" class="btn btn-primary pull-right">Submit</button>
                                </div>
                                <div class="form-group col-sm-6 col-xs-12 col-md-4 col-lg-6">
                                    <a asp-action="Index" asp-route-clientId="@Model.ClientId" class="btn btn-primary pull-left">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
@section VendorScripts{
    <script src="../../../assets/vendor/jquery-steps/jquery.steps.js"></script> <!-- JQuery Steps Plugin Js -->
    <script src="../../../assets/vendor/dropify/js/dropify.min.js"></script>
    <script src="../../../assets/bundles/mainscripts.bundle.js"></script>
}

@section Scripts{
    <script src="../../../assets/js/pages/forms/form-wizard.js"></script>
    <script src="../../../assets/js/pages/forms/dropify.js"></script>
}