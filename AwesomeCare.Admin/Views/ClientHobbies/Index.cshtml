@using AwesomeCare.Admin.ViewModels.ClientHobbies;
@model CreateClientHobbies

@{
    ViewData["Title"] = Model.Title;
}
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="card planned_task">
                <div class="card-body">

                    <form asp-action="Index" method="post">
                        <input type="hidden" asp-for="ClientId" />
                        <div class="row">
                            <div class="form-group col-sm-9 col-xs-12 col-md-9 col-lg-9">
                                <label>Hobbies</label>
                                 <select asp-for="Hobbies" asp-items="Model.HobbyList" class="selectpicker form-control" data-live-search="true" multiple></select>
                                <span asp-validation-for="Hobbies" class="text-danger"></span>
                            </div>

                            <div class="form-group col-sm-3 col-xs-12 col-md-3 col-lg-3">
                                <button type="submit" class="btn btn-primary">@Model.Action</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

