@using AwesomeCare.Admin.ViewModels.ClientHobbies;
@model CreateClientHobbies

@{
    ViewData["Title"] = "Edit Client Hobbies";
}
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="card planned_task">
                <div class="card-body">

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="ClientId" />
                        <div class="row">
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label>Hobbies</label>
                                 <select asp-for="Hobbies" asp-items="Model.HobbyList" class="selectpicker form-control" data-live-search="true" multiple></select>
                                <span asp-validation-for="Hobbies" class="text-danger"></span>
                            </div>

                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                               <a asp-action="Index" asp-controller="ClientHobbies" class="btn btn-primary pull-right">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
