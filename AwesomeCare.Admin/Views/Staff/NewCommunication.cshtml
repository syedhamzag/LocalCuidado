@using  AwesomeCare.Admin.ViewModels.StaffCommunication;
@model CreateStaffCommunication
@{
    ViewData["Title"] = "Add Communication";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12">
        <div class="card planned_task">
            <div class="header">
                <h2>Add Communication</h2>
            </div>
            <div class="body">
                <form  asp-route="NewCommunication"  method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="ValueDate" class="control-label"></label>
                                <input type="text" data-provide="datepicker" asp-for="ValueDate" data-date-autoclose="true" class="form-control" data-date-format="mm/dd/yyyy">
                                <span asp-validation-for="ValueDate" class="text-danger"></span>
                            </div>

                            <div >
                                <label asp-for="PersonInvolved" class="control-label"></label>
                                
                                <select class="form-control" asp-for="PersonInvolved">
                                    @foreach (var staff in Model.Staffs)
                                    {
                                        <option value="@staff.StaffPersonalInfoId">@staff.Fullname</option>
                                    }
                                </select>
                                <span asp-validation-for="PersonInvolved" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="Concern" class="control-label"></label>
                                <textarea class="form-control" asp-for="Concern"></textarea>
                                <span asp-validation-for="Concern" class="text-danger"></span>
                            </div>

                            <div>
                                <label asp-for="PersonResponsibleForAction" class="control-label"></label>
                                <select class="form-control" asp-for="PersonResponsibleForAction">
                                    @foreach (var staff in Model.Staffs)
                                    {
                                        <option value="@staff.StaffPersonalInfoId">@staff.Fullname</option>
                                    }
                                </select>
                                <span asp-validation-for="PersonResponsibleForAction" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="ExpectedAction" class="control-label"></label>
                                <input type="text" class="form-control" asp-for="ExpectedAction">
                                <span asp-validation-for="ExpectedAction" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Telephone" class="control-label"></label>
                                <input class="form-control" asp-for="Telephone" />
                                <span asp-validation-for="Telephone" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="ActionTaken" class="control-label"></label>
                                <input type="text" class="form-control" asp-for="ActionTaken">
                                <span asp-validation-for="ActionTaken" class="text-danger"></span>

                            </div>
                            <div class="form-group">
                                <label asp-for="FileAttachment" class="control-label"></label>
                                <input type="file" class="form-control" asp-for="FileAttachment">
                                <span asp-validation-for="FileAttachment" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="CommunicationClassId" class="control-label"></label>
                                <baserecord asp-key="Staff_Communication_Class" asp-for="CommunicationClassId" asp-items="null" />
                                <span asp-validation-for="CommunicationClassId" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="Status" class="control-label"></label>
                                <baserecord asp-key="Staff_Communication_Status" asp-for="Status" asp-items="null" />
                                <span asp-validation-for="Status" class="text-danger"></span>

                            </div>

                        </div>
                    </div>


                    <br>
                    <button id="btnSubmit" type="submit" class="btn btn-primary float-right">Submit</button>

                    @*<a href="/Staff/Communication" class="btn btn-default float-left">Cancel</a>*@


                </form>
            </div>
        </div>
    </div>
</div>

