@using AwesomeCare.Admin.ViewModels.Nutrition;

@model List<NutritionViewModel>
@{
    ViewData["Title"] = "Nutrition";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12">
        <div class="card planned_task">
            <div class="header">
                <h2>NUTRITION REPORT</h2>
            </div>
            <div class="body">
                        <table class="table table-condensed table-hover table-bordered">
                            <thead>
                                <tr>
                                    <th>Client</th>
                                    <th>Start Date</th>
                                    <th>Expire Date</th>
                                    <th></th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model.Select((d, i) => new { index = i + 1, data = d }))
                                {
                                <tr>
                                    <td>@item.data.ClientName</td>
                                    <td>@item.data.DATEFROM</td>
                                    <td>@item.data.DATETO</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <button id="btnGroupDrop1" type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            </button>
                                            <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                                @Html.ActionLink("View", "Reports", "Nutrition", new { clientId = item.data.ClientId }, new { @class = "dropdown-item" })
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                }
                                </tbody>
                        </table>
            </div>
        </div>
    </div>
</div>

