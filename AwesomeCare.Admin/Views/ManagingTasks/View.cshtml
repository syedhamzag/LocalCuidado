@using AwesomeCare.Admin.ViewModels.CarePlan.PersonalHygiene;
@model CreateManagingTasks
@{
    ViewData["Title"] = "View Managing Tasks";
}
@section HeaderScripts{
    <link rel="stylesheet" href="../../../assets2/vendor/jquery-steps/jquery.steps.css">
    <link rel="stylesheet" href="../../../assets2/vendor/dropify/css/dropify.min.css">
}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12">
        <div class="card planned_task">
            <div class="card-header">

                <h2></h2>

            </div>
            <div class="card-body">
                <form asp-route="ManagingTasks" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

                                    <input type="hidden" asp-for="@Model.TaskCount" value="@Model.TaskCount" />

                                    <table class="table table-hover table-bordered" id="tblMTasks">
                                        <thead>
                                            <tr>
                                                <th>Task</th>
                                                <th>Help Required</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.GetManagingTasks.Count > 0)
                                            {
                                                @foreach (var type in Model.GetManagingTasks)
                                                {
                                                    <tr>
                                                        <td><baserecord asp-key="MTask_Task" asp-for="@Model.GetManagingTasks.FirstOrDefault(s=>s.TaskId==type.TaskId).Task" asp-items="null" /></td>
                                                        <td><input type="text" asp-for="@Model.GetManagingTasks.FirstOrDefault().Help" value="@type.Help" class="form-control" readonly /></td>
                                                        <td><baserecord asp-key="MTask_Status" asp-for="@Model.GetManagingTasks.FirstOrDefault(s=>s.TaskId==type.TaskId).Status" asp-items="null" /><input type="hidden" asp-for="@Model.GetManagingTasks.FirstOrDefault(s=>s.TaskId==type.TaskId).TaskId" value="@type.TaskId" /></td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section VendorScripts{
    <script src="../../../assets2/vendor/jquery-steps/jquery.steps.js"></script> <!-- JQuery Steps Plugin Js -->
    <script src="../../../assets2/vendor/dropify/js/dropify.min.js"></script>
    <script src="../../../assets2/bundles/mainscripts.bundle.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.custom-select').attr("disabled", "disabled");
        });
    </script>
}

@section Scripts{
    <script src="../../../assets2/js/pages/forms/form-wizard.js"></script>
    <script src="../../../assets2/js/pages/forms/dropify.js"></script>
}