@using AwesomeCare.Admin.ViewModels.Client;
@model CreateClientBloodCoagulationRecord
@{
    ViewData["Title"] = "View Client Blood Coagulation Record";
}
@section HeaderScripts{
    <link rel="stylesheet" href="../../../assets/vendor/jquery-steps/jquery.steps.css">
    <link rel="stylesheet" href="../../../assets/vendor/dropify/css/dropify.min.css">
}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12">
        <div class="card planned_task">
            <div class="header">
                <h2></h2>
            </div>
            <div class="body">
                <div class="row">
                    <div class="col-xs-8 col-sm-8 col-md-8">
                        <input type="hidden" asp-for="BloodRecordId" />
                        <input type="hidden" asp-for="ClientId" />

                        <div class="row">
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Date</label>
                                <input type="text" asp-for="Date" class="form-control" readonly />
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Time</label>
                                <input type="text" asp-for="Time" class="form-control" readonly />
                                <span asp-validation-for="Time" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Start Date</label>
                                <input type="text" asp-for="StartDate" class="form-control" readonly />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Deadline</label>
                                <input type="text" asp-for="Deadline" class="form-control" readonly />
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Target INR</label>
                                <baserecord asp-key="Target_INR_Image_Availibility" asp-for="TargetINR" asp-items="null" />
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Reference</label>
                                <input type="text" asp-for="Reference" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Officer To Act</label>
                                <select asp-for="OfficerToAct" asp-items="@Model.OfficerToActList" class="selectpicker" data-live-search="true" multiple></select>
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Staff Name</label>
                                <select asp-for="StaffName" asp-items="@Model.StaffNameList" class="selectpicker" data-live-search="true" multiple></select>
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Physician Name</label>
                                <select asp-for="Physician" asp-items="@Model.PhysicianList" class="selectpicker" data-live-search="true" multiple></select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Indication</label>
                                <baserecord asp-key="Indication" asp-for="Indication" asp-items="null" readonly />
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">CurrentDose INR</label>
                                <baserecord asp-key="CurrentDose_INR" asp-for="CurrentDose" asp-items="null" readonly />
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">INR</label>
                                <baserecord asp-key="INR" asp-for="INR" asp-items="null" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">NewDose</label>
                                <baserecord asp-key="NewDose" asp-for="NewDose" asp-items="null" />
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">NewDose INR</label>
                                <baserecord asp-key="NewDose_INR" asp-for="NewINR" asp-items="null" />
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Status</label>
                                <baserecord asp-key="Staff_Communication_Status" asp-for="Status" asp-items="null" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                <label class="control-label">Blood Status</label>
                                <baserecord asp-key="Blood_Status" asp-for="BloodStatus" asp-items="null" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                <label class="control-label">Comment</label>
                                <textarea type="text" asp-for="Comment" class="form-control" readonly></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                <label class="control-label">Physician Response</label>
                                <textarea type="text" asp-for="PhysicianResponce" class="form-control" readonly></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                <label class="control-label">Remarks</label>
                                <textarea type="text" asp-for="Remark" class="form-control" readonly></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-4 col-sm-4 col-md-4">
                        <div class="card">
                            <div class="header">
                                <h2>TargetINR Attachment<small></small></h2>
                            </div>
                            <div class="body">
                                <img src="@Model.TargetINRAttach" alt="image" width="300" height="240" />
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section VendorScripts{
    <script src="../../../assets/vendor/jquery-steps/jquery.steps.js"></script> <!-- JQuery Steps Plugin Js -->
    <script src="../../../assets/vendor/dropify/js/dropify.min.js"></script>
    <script src="../../../assets/bundles/mainscripts.bundle.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('.custom-select').attr("disabled", "disabled");
        });
    </script>
}

@section Scripts{
    <script src="../../../assets/js/pages/forms/form-wizard.js"></script>
    <script src="../../../assets/js/pages/forms/dropify.js"></script>
}

