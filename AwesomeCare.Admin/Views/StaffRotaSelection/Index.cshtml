@using  AwesomeCare.Admin.ViewModels.Staff;
@model CreateStaffRotaSelection;
@{
    ViewData["Title"] = "Staff Rota Item";
}


@section VenderStyleSheets{

}

<div class="row clearfix">

    <div class="col-md-12">
        <div class="card">
            <div class="header">
                <h2>@Model.SubTitle</h2>
            </div>
            <div class="body clearfix">
                <form asp-controller="StaffRotaSelection" asp-action="SaveEdit" method="post">


                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="ItemName" class="control-label"></label>
                                <input type="text" class="form-control" asp-for="ItemName">
                                <span asp-validation-for="ItemName" class="text-danger"></span>
                                <input type="hidden" class="form-control" asp-for="StaffRotaDynamicAdditionId">
                            </div>

                        </div>

                    </div>


                    <br>
                    <button id="btnSubmit" type="submit" class="btn btn-primary float-right">Submit</button>
                    @if (Model.StaffRotaDynamicAdditionId > 0)
                    {
                        <a asp-action="Index" asp-controller="StaffRotaSelection" class="btn btn-default float-left">Cancel</a>
                    }

                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="card">
            <div class="header">
                <h2>Rota Items</h2>

            </div>
            <div class="body">
                <div class="table-responsive">
                    <table id="involvingPartyTable" class="table table-hover js-basic-example dataTable table-custom">
                        <thead>
                            <tr>
                                <th>Item</th>

                                <th></th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Item</th>

                                <th></th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model.RotaSelections)
                            {

                                <tr class="gradeA">
                                    <td>@item.ItemName</td>

                                    <td class="actions">
                                        <a asp-action="Index" asp-route-id="@item.StaffRotaDynamicAdditionId" asp-controller="StaffRotaSelection" class="btn btn-sm btn-icon btn-pure btn-success on-default m-r-5 button-edit">
                                            <i class="icon-pencil" aria-hidden="true"></i>
                                        </a>

                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section VendorScripts{

    <script src="../assets/bundles/datatablescripts.bundle.js"></script>
    <script src="../assets/vendor/jquery-datatable/buttons/dataTables.buttons.min.js"></script>
    <script src="../assets/vendor/jquery-datatable/buttons/buttons.bootstrap4.min.js"></script>
    <script src="../assets/vendor/jquery-datatable/buttons/buttons.colVis.min.js"></script>
    <script src="../assets/vendor/jquery-datatable/buttons/buttons.html5.min.js"></script>
    <script src="../assets/vendor/jquery-datatable/buttons/buttons.print.min.js"></script>

    <script src="../assets/vendor/sweetalert/sweetalert.min.js"></script> <!-- SweetAlert Plugin Js -->


    <script src="../assets/bundles/mainscripts.bundle.js"></script>
    <script src="../assets/js/pages/tables/jquery-datatable.js"></script>
}

