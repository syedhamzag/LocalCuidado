@using  AwesomeCare.DataTransferObject.DTOs.User;
@model List<GetUser>
@{
    ViewData["Title"] = "Application Users";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12">
        <div class="card planned_task">
            <div class="header">
                <h2>All Users</h2>
            </div>
            <div class="body">
                <table class="table m-b-0 datatables">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>UserName</th>
                            <th>Email</th>
                            <th>Is Email Confirmed</th>
                            <th>Is Account LockOut Enabled</th>
                            
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Select((d, i) => new { index = i + 1, data = d }))
                        {
                        <tr>
                            <td>@user.index </td>
                            <td><span>@user.data.UserName</span></td>
                            <td><span class="text-info">@user.data.Email</span></td>
                            <td>
                                @{
                                    var isEmailConfirmed = user.data.EmailConfirmed ? "Yes" : "No";
                                    @isEmailConfirmed;
                                }
                            </td>
                            <td>
                                @{
                                    var lockoutEnabled = user.data.LockedOutEnabled ? "Yes" : "No";
                                    @lockoutEnabled;
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <button id="btnGroupDrop1" type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                        <a class="dropdown-item" asp-route-userId="@user.data.UserId" asp-action="EditUser">Edit</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        }


                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

