@using AwesomeCare.Admin.ViewModels.CarePlan.Health;
@model CreateSpecialHealthCondition
@{
    ViewData["Title"] = "View Special Health Condition";
}
@section HeaderScripts{
    <link rel="stylesheet" href="../../../assets/vendor/jquery-steps/jquery.steps.css">
    <link rel="stylesheet" href="../../../assets/vendor/dropify/css/dropify.min.css">
}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12">
        <div class="card planned_task">
            <div class="header">

                <h2></h2>

            </div>
            <div class="body">
                <form asp-route="SpecialHealthCondition" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            <input type="hidden" asp-for="HealthCondId" />
                            <input type="hidden" asp-for="ClientId" />
                            <div class="row">
                                <div class="form-group col-sm-4 col-md-4 col-xs-12 col-lg-4">
                                    <label class="control-label">Condition Name</label>
                                    <input type="text" asp-for="ConditionName" class="form-control" readonly />
                                    <span asp-validation-for="ConditionName" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-4 col-md-4 col-xs-12 col-lg-4">
                                    <label class="control-label">Source OF Information</label>
                                    <input type="text" asp-for="SourceInformation" class="form-control" readonly />
                                    <span asp-validation-for="SourceInformation" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-4 col-md-4 col-xs-12 col-lg-4">
                                    <label class="control-label">Frequency Of Occurance</label>
                                    <input type="text" asp-for="Frequency" class="form-control" readonly />
                                    <span asp-validation-for="Frequency" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                    <label class="control-label">Feelings Before Incident</label>
                                    <textarea type="text" asp-for="FeelingBeforeIncident" class="form-control" readonly></textarea>
                                    <span asp-validation-for="FeelingBeforeIncident" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                    <label class="control-label">Feelings After Incident</label>
                                    <textarea type="text" asp-for="FeelingAfterIncident" class="form-control" readonly></textarea>
                                    <span asp-validation-for="FeelingAfterIncident" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                    <label class="control-label">Are There Risk Involved in Daily Living Activities</label>
                                    <textarea type="text" asp-for="LivingActivities" class="form-control" readonly></textarea>
                                    <span asp-validation-for="LivingActivities" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                    <label class="control-label">Trigger</label>
                                    <textarea type="text" asp-for="Trigger" class="form-control" readonly></textarea>
                                    <span asp-validation-for="Trigger" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                    <label class="control-label">Client Action</label>
                                    <textarea type="text" asp-for="ClientAction" class="form-control" readonly></textarea>
                                    <span asp-validation-for="ClientAction" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                    <label class="control-label">Medication Or Clinic Recommendation</label>
                                    <textarea type="text" asp-for="ClinicRecommendation" class="form-control" readonly></textarea>
                                    <span asp-validation-for="ClinicRecommendation" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                    <label class="control-label">What LifeStyle Support Is Required</label>
                                    <textarea type="text" asp-for="LifestyleSupport" class="form-control" readonly></textarea>
                                    <span asp-validation-for="LifestyleSupport" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                    <label class="control-label">Care assessment and Person Centred Planning for Health Condition/s</label>
                                    <textarea type="text" asp-for="PlanningHealthCondition" class="form-control" readonly></textarea>
                                    <span asp-validation-for="PlanningHealthCondition" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-6 col-xs-12 col-md-4 col-lg-6">
                                    <button type="submit" class="btn btn-primary pull-right">Submit</button>
                                </div>
                                <div class="form-group col-sm-6 col-xs-12 col-md-4 col-lg-6">
                                    <a asp-action="Index" asp-route-clientId="@Model.ClientId" class="btn btn-primary pull-left">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section VendorScripts{
    <script src="../../../assets/vendor/jquery-steps/jquery.steps.js"></script> <!-- JQuery Steps Plugin Js -->
    <script src="../../../assets/vendor/dropify/js/dropify.min.js"></script>
    <script src="../../../assets/bundles/mainscripts.bundle.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.custom-select').attr("disabled", "disabled");
        });
    </script>
}

@section Scripts{
    <script src="../../../assets/js/pages/forms/form-wizard.js"></script>
    <script src="../../../assets/js/pages/forms/dropify.js"></script>
}