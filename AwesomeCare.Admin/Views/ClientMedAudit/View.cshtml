@using AwesomeCare.Admin.ViewModels.ClientMedAudit;
@model CreateClientMedAudit
@{
    ViewData["Title"] = "View Client Med Audit";
}
@section HeaderScripts{
    <link rel="stylesheet" href="../../../assets/vendor/jquery-steps/jquery.steps.css">
    <link rel="stylesheet" href="../../../assets/vendor/dropify/css/dropify.min.css">
}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12">
        <div class="card planned_task">
            <div class="header">

                <h2></h2>

            </div>
            <div class="body">
                <div class="row">
                    <div class="col-xs-8 col-sm-8 col-md-8">
                        <input type="hidden" asp-for="MedAuditId" />
                        <input type="hidden" asp-for="ClientId" />
                        <div class="row">

                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">DATE</label>
                                <input type="text" asp-for="Date" class="form-control" data-provide="datepicker" data-date-autoclose="true" data-date-format="mm/dd/yyyy" readonly />
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">NEXT DUE DATE</label>
                                <input type="text" asp-for="NextDueDate" class="form-control" data-provide="datepicker" data-date-autoclose="true" data-date-format="mm/dd/yyyy" readonly />
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">DEADLINE</label>
                                <input type="text" asp-for="Deadline" class="form-control" data-provide="datepicker" data-date-autoclose="true" data-date-format="mm/dd/yyyy" readonly />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Name of Auditor</label>
                                <select asp-for="NameOfAuditor" asp-items="@Model.OFFICERTOACTList" class="selectpicker" data-live-search="true" multiple></select>
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Action Recommended</label>
                                <input type="text" asp-for="ActionRecommended" class="form-control" readonly />
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Action Taken</label>
                                <input type="text" asp-for="ActionTaken" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Officer to Take Action</label>
                                <select asp-for="OfficerToTakeAction" asp-items="@Model.OFFICERTOACTList" class="selectpicker" data-live-search="true" multiple></select>
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Status</label>
                                <baserecord asp-key="Staff_Communication_Status" asp-for="Status" asp-items="null" />
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Is there a Repeat of Incident</label>
                                <baserecord asp-key="Repeat_Of_Incident" asp-for="RepeatOfIncident" asp-items="null" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Reference</label>
                                <input type="text" asp-for="Reference" class="form-control" readonly />

                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Rot Cause</label>
                                <input type="text" asp-for="RotCause" class="form-control" readonly />
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Log URL</label>
                                <input type="text" asp-for="LogURL" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Gaps In Admistration</label>
                                <baserecord asp-key="Gaps_In_Admistration" asp-for="GapsInAdmistration" asp-items="null" />
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Mar Chart Review</label>
                                <baserecord asp-key="Mar_Chart_Review" asp-for="MarChartReview" asp-items="null" />
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Medication Concern</label>
                                <baserecord asp-key="Medication_Concern" asp-for="MedicationConcern" asp-items="null" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Hard Copy Review</label>
                                <baserecord asp-key="Hard_Copy_Review" asp-for="HardCopyReview" asp-items="null" />
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Medication Supply Efficiency</label>
                                <baserecord asp-key="Medication_Supply_Efficiency" asp-for="MedicationSupplyEfficiency" asp-items="null" />
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Medication Info Upload Eefficiency</label>
                                <baserecord asp-key="Medication_Info_Upload_Eefficiency" asp-for="MedicationInfoUploadEefficiency" asp-items="null" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                <label class="control-label">Remarks</label>
                                <textarea type="text" asp-for="Remarks" class="form-control" readonly></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                <label class="control-label">Rights Of Medication</label>
                                <textarea type="text" asp-for="RightsOfMedication" class="form-control" readonly></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                <label class="control-label">Do you think service users needs are being met?</label>
                                <textarea type="text" asp-for="ThinkingServiceUsers" class="form-control" readonly></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                <label class="control-label">Observations</label>
                                <textarea type="text" asp-for="Observations" class="form-control" readonly></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                <label class="control-label">Lesson Learnt and Shared</label>
                                <textarea type="text" asp-for="LessonLearntAndShared" class="form-control" readonly></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-4 col-sm-4 col-md-4">
                        <div class="card">
                            <div class="header">
                                <h2>Evidence of Action Taken<small></small></h2>
                            </div>
                            <div class="body">
                                <img src="@Model.Evidence" alt="image" width="300" height="240" />
                            </div>
                        </div>
                        <div class="card">
                            <div class="header">
                                <h2>Attachment Image<small></small></h2>
                            </div>
                            <div class="body">
                                <img src="@Model.Attach" alt="image" width="300" height="240" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section VendorScripts{
    <script src="../../../assets/vendor/jquery-steps/jquery.steps.js"></script> <!-- JQuery Steps Plugin Js -->
    <script src="../../../assets/vendor/dropify/js/dropify.min.js"></script>
    <script src="../../../assets/bundles/mainscripts.bundle.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('.custom-select').attr("disabled", "disabled");
        });
    </script>
}

@section Scripts{
    <script src="../../../assets/js/pages/forms/form-wizard.js"></script>
    <script src="../../../assets/js/pages/forms/dropify.js"></script>
}

