@using AwesomeCare.Admin.ViewModels.Client;
@model CreateClientBowelMovement
@{
    ViewData["Title"] = "View Client Bowel Movement";
}
@section HeaderScripts{
    <link rel="stylesheet" href="../../../assets2/vendor/jquery-steps/jquery.steps.css">
    <link rel="stylesheet" href="../../../assets2/vendor/dropify/css/dropify.min.css">
}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12">
        <div class="card planned_task">
            <div class="card-header">
                <h2></h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-xs-8 col-sm-8 col-md-8">
                        <input type="hidden" asp-for="BowelMovementId" />
                        <input type="hidden" asp-for="ClientId" />
                        <div class="row">
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Date</label>
                                <input type="text" asp-for="Date" class="form-control" readonly />
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Time</label>
                                <input type="text" asp-for="Time" class="form-control" readonly />
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Deadline</label>
                                <input type="text" asp-for="Deadline" class="form-control" readonly/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Officer To Act</label>
                                <select asp-for="OfficerToAct" asp-items="@Model.OfficerToActList" class="selectpicker form-control" data-live-search="true" multiple></select>
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Staff Name</label>
                                <select asp-for="StaffName" asp-items="@Model.StaffNameList" class="selectpicker form-control" data-live-search="true" multiple></select>
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Physician Name</label>
                                <select asp-for="Physician" asp-items="@Model.PhysicianList" class="selectpicker form-control" data-live-search="true" multiple></select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Bowel Movement Status</label>
                                <baserecord asp-key="Bowel_Movement_Status" asp-for="StatusImage" asp-items="null" />
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Type</label>
                                <baserecord asp-key="Type" asp-for="Type" asp-items="null" />
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Color</label>
                                <baserecord asp-key="Color" asp-for="Color" asp-items="null" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Size</label>
                                <baserecord asp-key="Size" asp-for="Size" asp-items="null" />
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Status</label>
                                <baserecord asp-key="Tele_Health_Status" asp-for="Status" asp-items="null" />
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label class="control-label">Reference</label>
                                <input type="text" asp-for="Reference" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                <label class="control-label">Comment</label>
                                <textarea type="text" asp-for="Comment" class="form-control" readonly></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                <label class="control-label">Physician Response</label>
                                <textarea type="text" asp-for="PhysicianResponse" class="form-control" readonly></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                <label class="control-label">Remarks</label>
                                <textarea type="text" asp-for="Remarks" class="form-control" readonly></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-4 col-sm-4 col-md-4">
                        <div class="card">
                            <div class="card-header">
                                <h2>Status Attachment<small></small></h2>
                            </div>
                            <div class="card-body">
                                <img src="@Model.StatusAttach" alt="image" width="300" height="240" />
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header">
                                <h2>Type Attachment<small></small></h2>
                            </div>
                            <div class="card-body">
                                <img src="@Model.TypeAttach" alt="image" width="300" height="240" />
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header">
                                <h2>Color Attachment<small></small></h2>
                            </div>
                            <div class="card-body">
                                <img src="@Model.ColorAttach" alt="image" width="300" height="240" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-6 col-xs-12 col-md-4 col-lg-6">
                                <button type="submit" class="btn btn-primary pull-right">Submit</button>
                            </div>
                            <div class="form-group col-sm-6 col-xs-12 col-md-4 col-lg-6">
                                <a asp-action="Index" asp-route-clientId="@Model.ClientId" class="btn btn-primary pull-left">Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section VendorScripts{
    <script src="../../../assets2/vendor/jquery-steps/jquery.steps.js"></script> <!-- JQuery Steps Plugin Js -->
    <script src="../../../assets2/vendor/dropify/js/dropify.min.js"></script>
    <script src="../../../assets2/bundles/mainscripts.bundle.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('.custom-select').attr("disabled", "disabled");
        });
    </script>
}

@section Scripts{
    <script src="../../../assets2/js/pages/forms/form-wizard.js"></script>
    <script src="../../../assets2/js/pages/forms/dropify.js"></script>
}


