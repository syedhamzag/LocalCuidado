@using AwesomeCare.Admin.ViewModels.CareReview;
@model CreateCareReview;

@{
    ViewData["Title"] = "Create Client Care Review";
}
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="card planned_task">
                <div class="card-body">

                    <form asp-action="Index" method="post">
                        <input type="hidden" asp-for="ClientId" />
                        <div class="row">
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label>Name</label>
                                <input type="text" asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label>Date</label>
                                <input type="text" asp-for="Date"  class="form-control" />
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label>Action</label>
                                <baserecord asp-key="Care_Review_Action" asp-items="null" asp-for="Action" />
                                <span asp-validation-for="Action" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-12 col-md-12 col-lg-12 col-xs-12">
                                <label>Note</label>
                                <textarea asp-for="Note" class="form-control"></textarea>
                                <span asp-validation-for="Note" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group col-sm-3 col-xs-12 col-md-3 col-lg-3">
                                <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

