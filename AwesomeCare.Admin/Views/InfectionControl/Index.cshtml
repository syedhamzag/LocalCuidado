@using AwesomeCare.Admin.ViewModels.CarePlan.PersonalHygiene;
@model CreateInfectionControl
@{
    ViewData["Title"] = @Model.Title;
}
@section HeaderScripts{
    <link rel="stylesheet" href="../../../assets2/vendor/jquery-steps/jquery.steps.css">
    <link rel="stylesheet" href="../../../assets2/vendor/dropify/css/dropify.min.css">
}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12">
        <div class="card planned_task">
            <div class="card-header">
                <h2></h2>
            </div>
            <div class="card-body">
                <form asp-action="@Model.Method" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12">

                            <input type="hidden" asp-for="InfectionId" />
                            <input type="hidden" asp-for="ClientId" />

                            <div class="row">
                                <div class="form-group col-sm-6 col-md-6 col-xs-12 col-lg-6">
                                    <label class="control-label">Infection Type</label>
                                    <baserecord asp-key="Infection_Type" asp-for="Type" asp-items="null" />
                                    <span asp-validation-for="Type" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-6 col-md-6 col-xs-12 col-lg-6">
                                    <label class="control-label">Vaccination Status</label>
                                    <baserecord asp-key="Vaccination_Status" asp-for="VaccStatus" asp-items="null" />
                                    <span asp-validation-for="VaccStatus" class="text-danger"></span>
                                </div>
                           
                            </div>

                            <div class="row">
                                <div class="form-group col-sm-6 col-md-6 col-xs-12 col-lg-6">
                                    <label class="control-label">Test Date</label>
                                    <input type="text" asp-for="TestDate" class="form-control" data-provide="datepicker" data-date-autoclose="true" data-date-format="mm/dd/yyyy" />
                                    <span asp-validation-for="TestDate" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-6 col-md-6 col-xs-12 col-lg-6">
                                    <label class="control-label">Status</label>
                                    <baserecord asp-key="Infection_Status" asp-for="Status" asp-items="null" />
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                    <label class="control-label">Government Guideline</label>
                                    <textarea type="text" asp-for="Guideline" class="form-control"></textarea>
                                    <span asp-validation-for="Guideline" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-sm-12 col-xs-12 col-md-12 col-lg-12">
                                    <label class="control-label">Remarks</label>
                                    <textarea type="text" asp-for="Remarks" class="form-control"></textarea>
                                    <span asp-validation-for="Remarks" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-sm-10 col-xs-10 col-md-12 col-lg-10">
                                    <button type="submit" class="btn btn-primary pull-right">@Model.ActionName</button>
                                </div>
                                <div class="form-group col-sm-2 col-xs-12 col-md-2 col-lg-2">
                                    <a asp-action="Index" asp-route-clientId="@Model.ClientId" class="btn btn-primary pull-left">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section VendorScripts{
    <script src="../../../assets2/vendor/jquery-steps/jquery.steps.js"></script> <!-- JQuery Steps Plugin Js -->
    <script src="../../../assets2/vendor/dropify/js/dropify.min.js"></script>
    <script src="../../../assets2/bundles/mainscripts.bundle.js"></script>
}

@section Scripts{
    <script src="../../../assets2/js/pages/forms/form-wizard.js"></script>
    <script src="../../../assets2/js/pages/forms/dropify.js"></script>
}