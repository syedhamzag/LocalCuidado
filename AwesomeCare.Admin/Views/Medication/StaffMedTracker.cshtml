@using AwesomeCare.Admin.ViewModels.Staff;
@model StaffMedTrackerViewModel

@{
    ViewData["Title"] = "Create Staff Medication Tracker";
}

    <div class="row clearfix">
        <div class="col-lg-12 col-md-12">
            <div class="card planned_task">
                <div class="card-header">
                </div>
                <div class="card-body">

                    <form asp-action="StaffMedTracker" method="post">
                        <input type="hidden" asp-for="ClientMedId" />
                        <div class="row">
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label>Date</label>
                                <input type="text" asp-for="MedTrackDate" class="form-control" data-provide="datepicker" data-date-autoclose="true" data-date-format="mm/dd/yyyy" />
                                <span asp-validation-for="MedTrackDate" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label asp-for="DoseGiven"></label>
                                <input type="text" asp-for="DoseGiven" class="form-control">
                                <span asp-validation-for="DoseGiven" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label asp-for="Status"></label>
                                <baserecord asp-key="Dose_Given_Status" asp-items="null" asp-for="Status" />
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="row">

                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label>Staff</label>
                                <select asp-for="StaffPersonalInfoId" asp-items="@Model.StaffList" class="selectpicker form-control" data-live-search="true"></select>
                                <span asp-validation-for="StaffPersonalInfoId" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                                <label>Rota</label>
                                <select asp-for="RotaId" asp-items="@Model.Rotas" class="selectpicker form-control" data-live-search="true"></select>
                                <span asp-validation-for="RotaId" class="text-danger"></span>
                            </div>

                        </div>


                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a asp-action="Index" asp-controller="Medication" class="btn btn-primary pull-right">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
