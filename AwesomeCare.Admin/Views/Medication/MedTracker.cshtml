@using AwesomeCare.DataTransferObject.DTOs.Medication;
@using System.Globalization;

@model List<MedTracker>
@{
    ViewData["Title"] = "Medication Tracker";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12">
        <div class="card planned_task">
            <div class="card-header">
                <h2>Medication Tracker</h2>

            </div>
            <div class="card-body">
                <form asp-action="MedTracker" method="post">
                    <div class="row">
                        <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                            <label>Start Date</label>
                            <input type="text" name="StartDate" class="form-control" data-provide="datepicker" data-date-autoclose="true" data-date-format="yyyy-mm-dd">
                        </div>

                        <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                            <label>Stop Date</label>
                            <input type="text" name="StopDate" class="form-control" data-provide="datepicker" data-date-autoclose="true" data-date-format="yyyy-mm-dd">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-8 col-xs-12 col-md-8 col-lg-8">
                            <button type="submit" class="btn btn-primary pull-right">Preview</button>
                        </div>
                    </div>
                </form>
                @if (Model?.Count > 0)
                {
                    <div class="row">
                        <div class="col-lg-12">
                            <table class="table table-condensed table-hover table-bordered datatablesExportExcel table-responsive">
                                <thead>
                                    <tr>
                                        <th>Period</th>
                                        <th>Date</th>
                                        <th>Rota</th>
                                        <th>Client</th>
                                        <th>Client DOB</th>
                                        <th>Client Id</th>
                                        <th>Medication</th>
                                        <th>Dose to be Given</th>
                                        <th>Dose Given</th>
                                        <th>Time</th>
                                        <th>Measurement</th>
                                        <th>Route</th>
                                        <th>Gap</th>
                                        <th>StartTime</th>
                                        <th>StopTime</th>
                                        <th>Instruction</th>
                                        <th>Frequency</th>
                                        <th>Expiry Date</th>
                                        <th>Status</th>
                                        <th>Location</th>
                                        <th>Staff</th>
                                        <th>Feedback</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                                <td>@item.PERIOD</td>
                                                <td>@item.RotaDate</td>
                                                <td>@item.RotaName</td>
                                                <td>@item.ClientName</td>
                                                <td>@item.DOB</td>
                                                <td>@item.ClientIdNumber</td>
                                                <td>@item.Medication</td>
                                                <td>@item.Dossage</td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td>@item.Route</td>
                                                <td>@item.Gap_Hour</td>
                                                <td>@item.StartDate</td>
                                                <td>@item.StopDate</td>
                                                <td>@item.Remark</td>
                                                <td>@item.Frequency</td>
                                                <td>@item.ExpiryDate</td>
                                                <td>@item.Status</td>
                                                <td></td>
                                                <td>@item.StaffName</td>
                                                <td>@item.Feedback</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>

                }

            </div>
        </div>
    </div>
</div>


