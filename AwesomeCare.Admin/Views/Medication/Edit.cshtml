@using AwesomeCare.DataTransferObject.DTOs.Medication;

@model PutMedication
@{
    ViewData["Title"] = "Edit";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12">
        <div class="card planned_task">
            <div class="header">
                <h2>Edit</h2>
                <ul class="header-dropdown">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"></a>
                        <ul class="dropdown-menu dropdown-menu-right">
                            <li><a asp-controller="Medication" asp-action="Create">Create New</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="MedicationId" />
                    <div class="row">

                        <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                            <label asp-for="MedicationName"></label>
                            <input type="text" asp-for="MedicationName" class="form-control">
                            <span asp-validation-for="MedicationName" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="row">

                        <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                            <label asp-for="Strength"></label>
                            <input type="text" asp-for="Strength" class="form-control">
                            <span asp-validation-for="Strength" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="form-group">
                        
                        <label class="fancy-checkbox">
                            <input type="checkbox" asp-for="Deleted">
                            <span>Check to delete</span>
                        </label>
                        
                    </div>

                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-action="Index" asp-controller="Medication" class="btn btn-primary pull-right">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

