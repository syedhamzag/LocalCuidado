
@using AwesomeCare.DataTransferObject.DTOs.ShiftBooking;
@model List<GetShiftBookingDetails>
        @{
        ViewData["Title"] = "Shift Booking - Available Shifts";
        }
               
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12">
                <div class="card planned_task">
                    <div class="header">
                        <h2>Available Shifts</h2>
                        
                    </div>
                    <div class="body">

                        <table class="table m-b-0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Shift Date</th>
                                    <th>Start Time</th>
                                    <th>Stop Time</th>
                                    <th>No. of Staffs</th>
                                    <th>Driver Required</th>
                                    <th>Remark</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Select((d, i) => new { index = i + 1, data = d }))
                                {
                                    <tr>
                                        <td>@item.index </td>
                                        <td>@item.data.ShiftDate</td>
                                        <td>@item.data.StartTime</td>
                                        <td>@item.data.StopTime</td>
                                        <td>@item.data.NumberOfStaff</td>
                                        <td>@item.data.DriverRequired</td>
                                        <td>@item.data.Remark</td>
                                        
                                        <td>
                                            <a asp-controller="ShiftBooking" asp-action="Create" asp-route-shiftId="@item.data.ShiftBookingId" asp-route-month="@item.data.ShiftDate.ToMonthName()" class="btn btn-success btn-sm">Book</a>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
 
