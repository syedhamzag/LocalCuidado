
@model List<GetClientServiceDetail>
        @{
        ViewData["Title"] = "Client Services";
        }
               
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12">
                <div class="card planned_task">
                    <div class="header">
                        <h2>Client Services</h2>
                        <ul class="header-dropdown">
                            <li class="dropdown">
                                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"></a>
                                <ul class="dropdown-menu dropdown-menu-right">
                                    <li><a asp-action="Add" asp-controller="ClientService">Add Service</a></li>
                                    
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <div class="body">
                        <table class="table m-b-0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Date</th>
                                    <th>Client</th>
                                    <th>Amount Given</th>
                                    <th>Amount Returned</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Select((d, i) => new { index = i + 1, data = d }))
                                {
                                    <tr>
                                        <td>@item.index </td>
                                        <td>@item.data.ServiceDate</td>
                                        <td>@item.data.Client</td>
                                        <td>@item.data.AmountGiven</td>
                                        <td>@item.data.AmountReturned</td>

                                        <td>
                                            <a asp-controller="ClientService" asp-action="Details" asp-route-id="@item.data.ClientServiceDetailId"  class="btn btn-success btn-sm">Details</a>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
 
