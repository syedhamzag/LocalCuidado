@using AwesomeCare.Web.ViewModels.IncidentReport;
@model PostStaffIncidentReportViewModel

@{
    ViewData["Title"] = "Staff-Incident-Report";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12">
        <div class="card planned_task">
            <div class="header">
                <h2>Incident Reporting</h2>
            </div>
            <div class="body">
                <form asp-route="AddReport" method="post" enctype="multipart/form-data">

                    <div class="row">
                       
                        <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                            <label asp-for="StaffInvolvedId">Staff Involved <span class="text-danger">*</span></label>
                            <select asp-for="StaffInvolvedId" asp-items="@Model.Staffs" class="form-control chosen-select" data-placeholder="Choose a Staff..."></select>
                            <span asp-validation-for="StaffInvolvedId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                            <label asp-for="IncidentType">Incident Type<span class="text-danger">*</span></label>
                            <baserecord asp-key="Staff_IncidentType" asp-for="IncidentType" asp-items="null" />
                            <span asp-validation-for="IncidentType" class="text-danger"></span>
                        </div>

                        <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                            <label asp-for="ClientId">Client <span class="text-danger">*</span></label>
                            <select asp-for="ClientId" asp-items="@Model.Clients" class="form-control chosen-select" data-placeholder="Choose a Client..."></select>
                            <span asp-validation-for="ClientId" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="row">
                        <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                            <label asp-for="ActionTaken"></label>
                            <input type="text" asp-for="ActionTaken" class="form-control">
                            <span asp-validation-for="ActionTaken" class="text-danger"></span>
                        </div>

                        <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                            <label asp-for="Witness"></label>
                            <input type="text" asp-for="Witness" class="form-control">
                            <span asp-validation-for="Witness" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                            <label asp-for="IncidentDetails">Incident Details <span class="text-danger">*</span></label>
                            <textarea type="text" asp-for="IncidentDetails" class="form-control"></textarea>
                            <span asp-validation-for="IncidentDetails" class="text-danger"></span>
                        </div>

                        <div class="form-group col-sm-4 col-xs-12 col-md-4 col-lg-4">
                            <label asp-for="UploadAttachment">Attachment <span><small>(if any,file formats are png,jpg,jpeg)</small></span></label>
                            <input type="file" asp-for="UploadAttachment" class="form-control">
                            <span asp-validation-for="UploadAttachment" class="text-danger"></span>
                        </div>
                    </div>





                    <div class="row">
                        <div class="form-group col-sm-8 col-xs-12 col-md-8 col-lg-8">
                            <a asp-controller="IncidentReporting" class="btn btn-default pull-left" asp-action="Reports">Cancel</a>
                            <button type="submit" class="btn btn-primary pull-right">Submit</button>
                        </div>
                    </div>


                </form>
            </div>
        </div>
    </div>
</div>

