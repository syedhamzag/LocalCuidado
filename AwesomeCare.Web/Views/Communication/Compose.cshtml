@using AwesomeCare.Web.ViewModels.Communication;
@model ComposeMessage
@{
    ViewData["Title"] = "Communication - Compose Message";
}

@section VendorStyleSheets{

    <link href="/assets/vendor/summernote/dist/summernote.css" rel="stylesheet" />
}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12">
        <div class="card planned_task">
            <div class="header">
                <h2>Compose Message</h2>

            </div>
            <div class="body">
               


                <form asp-action="Compose" method="post">
                    <div class="form-group">
                        <label asp-for="To" class="control-label"></label>
                        <select asp-for="To" class="form-control chosen-select" data-placeholder="Choose a Staff..." asp-items="Model.Staffs">
                        </select>
                        <span asp-validation-for="To" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Subject" class="control-label"></label>
                        <input class="form-control" asp-for="Subject" />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    @*<div class="form-group">
                            <input type="text" class="form-control" placeholder="CC">
                        </div>*@

                    <hr>
                    <div class="form-group">
                        <label asp-for="Message" class="control-label"></label>
                        <textarea class="form-control summernote" asp-for="Message"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    
                    <div class="m-t-30">
                        <button type="submit" class="btn btn-success">Send Message</button>

                        <a asp-controller="Communication" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section VendorScripts{

    <script src="/assets/vendor/summernote/dist/summernote.js"></script>
}
