                                                <div class="form-group">
                                                    <label asp-for="EmploymentDate" class="control-label"></label>
                                                    <input type="text" asp-for="EmploymentDate" class="form-control" readonly>
                                                    <span asp-validation-for="EmploymentDate" class="text-danger"></span>
                                                </div>

                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-xs-8 col-sm-8 col-md-8">
                                                <div class="row">
                                                    <div class="col-xs-12 col-sm-4 col-md-4">
                                                        <div class="form-group">
                                                            <label asp-for="Rate" class="control-label"></label>
                                                            <input type="text" asp-for="Rate" class="form-control" readonly>
                                                        </div>
                                                    </div>
                                                    <div class="col-xs-12 col-sm-4 col-md-4">
                                                        <div class="form-group">
                                                            <label asp-for="TeamLeader" class="control-label"></label>

                                                            <input type="text" asp-for="TeamLeader" class="form-control" readonly>
                                                        </div>
                                                    </div>

                                                    <div class="col-xs-12 col-sm-4 col-md-4">
                                                        <div class="form-group">
                                                            <label asp-for="HasUniform" class="control-label"></label>
                                                            <p>
                                                                @{
                                                                    string hasuniform = "No";
                                                                    if (Model.HasUniform.HasValue)
                                                                    {
                                                                        hasuniform = Model.HasUniform.Value ? "Yes" : "No";
                                                                    }


                                                                    @hasuniform
                                                                }
                                                            </p>
                                                            <input type="hidden" asp-for="HasUniform" class="form-control" readonly>
                                                        </div>
                                                    </div>
                                                </div>

