                                                    <div class="col-xs-12 col-sm-4 col-md-4">
                                                        <div class="form-group">
                                                            <label asp-for="RightToWork" class="control-label"></label>
                                                            <br />
                                                            <label class="fancy-radio custom-color-green"><input name="RightToWork" asp-for="RightToWork" value="No" type="radio" checked><span><i></i>No</span></label>
                                                            <label class="fancy-radio custom-color-green"><input name="RightToWork" asp-for="RightToWork" value="Yes" type="radio"><span><i></i>Yes</span></label>

                                                            <span asp-validation-for="RightToWork" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-xs-12 col-sm-4 col-md-4">
                                                        <div class="form-group">
                                                            <label asp-for="RightToWorkAttachment" class="control-label"></label>

                                                            <input type="file" asp-for="RightToWorkAttachment" class="form-control">

                                                            <span asp-validation-for="RightToWorkFile" class="text-danger"></span>
                                                            <span asp-validation-for="RightToWorkAttachment" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-xs-12 col-sm-4 col-md-4">
                                                        <div class="form-group">
                                                            <label asp-for="RightToWorkExpiryDate" class="control-label"></label>
                                                            <input data-provide="datepicker" type="text" asp-for="RightToWorkExpiryDate" data-date-autoclose="true" class="form-control" data-date-format="mm/dd/yyyy">
                                                            <span asp-validation-for="RightToWorkExpiryDate" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-xs-12 col-sm-3 col-md-3">

                                                    </div>
                                                </div>

                                            </div>
                                            <div class="col-xs-4 col-sm-4 col-md-4">
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-xs-8 col-sm-8 col-md-8">
                                                <div class="row">
                                                    <div class="col-xs-12 col-sm-4 col-md-4">
                                                        <div class="form-group">
                                                            <label asp-for="DBS" class="control-label"></label>
                                                            <br />
                                                            <label class="fancy-radio custom-color-green"><input name="dbs" asp-for="DBS" value="No" type="radio" checked><span><i></i>No</span></label>
                                                            <label class="fancy-radio custom-color-green"><input name="dbs" asp-for="DBS" value="Yes" type="radio"><span><i></i>Yes</span></label>

                                                            <span asp-validation-for="DBS" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-xs-12 col-sm-4 col-md-4">
                                                        <div class="form-group">
                                                            <label asp-for="DBSAttachment" class="control-label"></label>

                                                            <input type="file" asp-for="DbsFile" class="form-control">
                                                            <input type="hidden" asp-for="DBSAttachment" class="form-control">

                                                            <span asp-validation-for="DbsFile" class="text-danger"></span>
                                                            <span asp-validation-for="DBSAttachment" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-xs-12 col-sm-4 col-md-4">
                                                        <div class="form-group">
                                                            <label asp-for="DBSExpiryDate" class="control-label"></label>
                                                            <input data-provide="datepicker" type="text" asp-for="DBSExpiryDate" data-date-autoclose="true" class="form-control" data-date-format="mm/dd/yyyy">
                                                            <span asp-validation-for="DBSExpiryDate" class="text-danger"></span>
                                                        </div>
                                                    </div>

                                                </div>

                                            </div>
                                            <div class="col-xs-12 col-sm-4 col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="DBSUpdateNo" class="control-label"></label>
                                                    <input type="text" asp-for="DBSUpdateNo" class="form-control">
                                                    <span asp-validation-for="DBSUpdateNo" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-xs-8 col-sm-8 col-md-8">
                                                <div class="row">
                                                    <div class="col-xs-12 col-sm-4 col-md-4">
                                                        <div class="form-group">
                                                            <label asp-for="NI" class="control-label"></label>
                                                            <br />
                                                            <label class="fancy-radio custom-color-green"><input name="ni" asp-for="NI" value="No" type="radio" checked><span><i></i>No</span></label>
                                                            <label class="fancy-radio custom-color-green"><input name="ni" asp-for="NI" value="Yes" type="radio"><span><i></i>Yes</span></label>

                                                            <span asp-validation-for="NI" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-xs-12 col-sm-4 col-md-4">
                                                        <div class="form-group">
                                                            <label asp-for="NIAttachment" class="control-label"></label>

                                                            <input type="file" asp-for="NiFile" class="form-control">
                                                            <input type="hidden" asp-for="NIAttachment" class="form-control">

                                                            <span asp-validation-for="NiFile" class="text-danger"></span>
                                                            <span asp-validation-for="NIAttachment" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-xs-12 col-sm-4 col-md-4">
                                                        <div class="form-group">
                                                            <label asp-for="NIExpiryDate" class="control-label"></label>
                                                            <input data-provide="datepicker" type="text" asp-for="NIExpiryDate" data-date-autoclose="true" class="form-control" data-date-format="mm/dd/yyyy">
                                                            <span asp-validation-for="NIExpiryDate" class="text-danger"></span>
                                                        </div>
                                                    </div>

                                                </div>

                                            </div>
                                            <div class="col-xs-4 col-sm-4 col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="PlaceOfBirth" class="control-label"></label>
                                                    <input type="text" asp-for="PlaceOfBirth" data-date-autoclose="true" class="form-control">
                                                    <span asp-validation-for="PlaceOfBirth" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-xs-8 col-sm-8 col-md-8">
                                                <div class="row">
                                                    <div class="col-xs-12 col-sm-4 col-md-4">
                                                        <div class="form-group">
                                                            <label asp-for="SelfPYE" class="control-label"></label>
                                                            <br />
                                                            <label class="fancy-radio custom-color-green"><input name="selfpye" asp-for="SelfPYE" value="No" type="radio" checked><span><i></i>No</span></label>
                                                            <label class="fancy-radio custom-color-green"><input name="selfpye" asp-for="SelfPYE" value="Yes" type="radio"><span><i></i>Yes</span></label>

                                                            <span asp-validation-for="SelfPYE" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-xs-12 col-sm-4 col-md-4">
