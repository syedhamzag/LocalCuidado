                                                <div class="form-group">
                                                    <label asp-for="IsTeamLeader" class="control-label"></label>
                                                    <p>
                                                        @{
                                                            string isteamleader = "No";
                                                            if (Model.IsTeamLeader.HasValue)
                                                            {
                                                                isteamleader = Model.IsTeamLeader.Value ? "Yes" : "No";
                                                            }
                                                            @isteamleader
                                                        }
                                                    </p>
                                                    <input type="hidden" asp-for="IsTeamLeader" class="form-control">
                                                </div>

                                            </div>
                                            <div class="col-xs-2 col-sm-2 col-md-2">

                                                <div class="form-group">
                                                    <label asp-for="HasIdCard" class="control-label"></label>
                                                    <p>
                                                        @{
                                                            string hasId = "No";
                                                            if (Model.HasIdCard.HasValue)
                                                            {
                                                                hasId = Model.HasIdCard.Value ? "Yes" : "No";
                                                            }
                                                            @hasId
                                                        }
                                                    </p>
                                                    <input type="hidden" asp-for="HasIdCard" class="form-control">
                                                </div>

                                            </div>
                                        </div>

