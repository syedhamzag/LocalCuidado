                                                        <div class="form-group">
                                                            <label asp-for="WorkTeam" class="control-label"></label>
                                                            <input type="text" asp-for="WorkTeam" class="form-control">
                                                            <span asp-validation-for="WorkTeam" class="text-danger"></span>
                                                        </div>
                                                    </div>

                                                </div>

                                            </div>
                                            <div class="col-xs-4 col-sm-4 col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="JobCategory" class="control-label"></label>
                                                    <baserecord asp-key="Staff_JobCategory" asp-for="JobCategory" asp-items="null" />
                                                    <span asp-validation-for="JobCategory" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-xs-8 col-sm-8 col-md-8">
                                                <div class="row">
                                                    <div class="col-xs-12 col-sm-4 col-md-4">
                                                        <div class="form-group">
                                                            <label asp-for="CV" class="control-label"></label>

                                                            <input type="file" asp-for="CvFile" class="form-control">
                                                            <input type="hidden" asp-for="CV" class="form-control">

                                                            <span asp-validation-for="CvFile" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-xs-12 col-sm-4 col-md-4">
                                                        <div class="form-group">
                                                            <label asp-for="CoverLetter" class="control-label"></label>

                                                            <input type="file" asp-for="CoverLetterFile" class="form-control">
                                                            <input type="hidden" asp-for="CoverLetter" class="form-control">

                                                            <span asp-validation-for="CoverLetterFile" class="text-danger"></span>
                                                        </div>
                                                    </div>

