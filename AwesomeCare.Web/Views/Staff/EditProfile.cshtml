                                                        <div class="form-group">
                                                            <label asp-for="DrivingLicense" class="control-label"></label>

                                                            <input type="file" asp-for="DrivingLicenseFile" class="form-control">
                                                            <input type="hidden" asp-for="DrivingLicense" class="form-control">

                                                            <span asp-validation-for="DrivingLicenseFile" class="text-danger"></span>
                                                            <span asp-validation-for="DrivingLicense" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-xs-12 col-sm-4 col-md-4">
                                                        <div class="form-group">
                                                            <label asp-for="DrivingLicenseExpiryDate" class="control-label"></label>
                                                            <input data-provide="datepicker" asp-for="DrivingLicenseExpiryDate" data-date-autoclose="true" type="text" class="form-control" data-date-format="mm/dd/yyyy">
                                                            <span asp-validation-for="DrivingLicenseExpiryDate" class="text-danger"></span>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                            <div class="col-xs-4 col-sm-4 col-md-4">
                                                <div class="card">
                                                    <div class="header">
                                                        <h2>Profile Pix<small></small></h2>
                                                    </div>
                                                    <div class="body">
                                                        <input type="file" asp-for="ProfilePixFile" class="dropify" data-allowed-file-extensions="png jpg jpeg">
                                                        <input type="hidden" asp-for="ProfilePix">
                                                        <span asp-validation-for="ProfilePix" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-xs-8 col-sm-8 col-md-8">
