                                                            <label class="fancy-radio custom-color-green"><input name="candrive" asp-for="CanDrive" value="Yes" type="radio"><span><i></i>Yes</span></label>

                                                            <span asp-validation-for="CanDrive" class="text-danger"></span>
                                                        </div>
                                                    </div>
